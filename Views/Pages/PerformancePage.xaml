<Page
    x:Class="ProjectManager.Views.Pages.PerformancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ProjectManager.Models"
    xmlns:converters="clr-namespace:ProjectManager.Converters"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="PerformancePage"
    d:DataContext="{d:DesignInstance local:PerformancePage, IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d"
    Loaded="PerformancePage_Loaded"
    Unloaded="PerformancePage_Unloaded">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" NullFallback="--" />
    </Page.Resources>

    <Grid>
        <Border BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1" CornerRadius="12">
            <StackPanel Margin="8">
                    <ItemsControl ItemsSource="{Binding ProjectMetrics}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:ProjectPerformanceSnapshot}">
                                    <ui:Card Padding="16" Margin="0,0,0,12">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!-- Header -->
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Orientation="Vertical" Grid.Column="0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding ProjectName}" FontSize="20" FontWeight="SemiBold" />
                                                        <ui:Badge Content="{Binding StatusDisplay}" Margin="8,0,0,0" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Framework}" Opacity="0.6" FontSize="12" />
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <ui:Button Content="打开目录" Appearance="Secondary" Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" />
                                                </StackPanel>
                                            </Grid>

                                            <!-- Basic info -->
                                            <TextBlock Grid.Row="1" Text="{Binding LocalPath}" FontSize="12" Opacity="0.7" TextTrimming="CharacterEllipsis" />
                                            <TextBlock Grid.Row="2" Text="{Binding StartCommand}" FontSize="12" Opacity="0.6" Margin="0,4,0,8" TextTrimming="CharacterEllipsis" />

                                            <!-- Metrics grid -->
                                            <Grid Grid.Row="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="CPU" Opacity="0.6" FontSize="12" />
                                                    <TextBlock FontSize="18" FontWeight="SemiBold">
                                                        <Run Text="{Binding CpuUsagePercent, StringFormat={}{0:F1}}" />
                                                        <Run Text="%" />
                                                    </TextBlock>
                                                    <ProgressBar Value="{Binding CpuUsagePercent}" Maximum="100" Height="4" Margin="0,4,16,0" />
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Visibility="{Binding DataContext.HasGpuData, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibility}}">
                                                    <TextBlock Text="GPU" Opacity="0.6" FontSize="12" />
                                                    <TextBlock FontSize="18" FontWeight="SemiBold">
                                                        <Run Text="{Binding GpuUsagePercent, TargetNullValue=0, StringFormat={}{0:F1}}" />
                                                        <Run Text="%" />
                                                    </TextBlock>
                                                    <ProgressBar Value="{Binding GpuUsagePercent, TargetNullValue=0}" Maximum="100" Height="4" Margin="0,4,16,0" />
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" HorizontalAlignment="Left" Margin="-40,0,0,0">
                                                    <TextBlock Text="内存 (工作集)" Opacity="0.6" FontSize="12" HorizontalAlignment="Left" />
                                                    <TextBlock Text="{Binding MemoryUsageMb, StringFormat={}{0:F1} MB}" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Left" />
                                                </StackPanel>

                                                <StackPanel Grid.Column="3">
                                                    <TextBlock Text="线程数" Opacity="0.6" FontSize="12" />
                                                    <TextBlock Text="{Binding ThreadCount}" FontSize="18" FontWeight="SemiBold" />
                                                </StackPanel>
                                            </Grid>

                                            <Grid Grid.Row="4" Margin="0,12,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="PID" Opacity="0.6" FontSize="12" />
                                                    <TextBlock Text="{Binding ProcessId, TargetNullValue=--}" FontWeight="SemiBold" />
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="启动时间" Opacity="0.6" FontSize="12" />
                                                    <TextBlock Text="{Binding ProcessStartTime, TargetNullValue=--, StringFormat={}{0:MM-dd HH:mm}}" FontWeight="SemiBold" />
                                                </StackPanel>

                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="运行时长" Opacity="0.6" FontSize="12" />
                                                    <TextBlock Text="{Binding Uptime, Converter={StaticResource TimeSpanToStringConverter}}" FontWeight="SemiBold" />
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </ui:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="当前没有可监控的项目" HorizontalAlignment="Center" Margin="0,24,0,0" FontSize="14" Opacity="0.6">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TotalProjects}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
            </Border>
        </Grid>
</Page>
