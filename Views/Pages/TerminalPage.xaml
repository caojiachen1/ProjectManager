<Page
    x:Class="ProjectManager.Views.Pages.TerminalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Pages"
    xmlns:converters="clr-namespace:ProjectManager.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="终端"
    d:DataContext="{d:DesignInstance local:TerminalPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- 转换器资源 -->
        <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- 终端样式资源 -->
        <Style x:Key="TerminalTabStyle" TargetType="TabItem">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1,1,1,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4,4,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0"
                                                  ContentSource="Header"
                                                  Margin="{TemplateBinding Padding}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"/>
                                <ui:Button Grid.Column="1"
                                           Width="16" Height="16"
                                           Margin="4,0,4,0"
                                           Padding="0"
                                           Background="Transparent"
                                           BorderThickness="0"
                                           Command="{Binding DataContext.ViewModel.CloseSessionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                           CommandParameter="{Binding}">
                                    <ui:SymbolIcon Symbol="Dismiss12" FontSize="10"/>
                                </ui:Button>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1E1E1E"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3E3E42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TerminalOutputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalScrollBarVisibility="{TemplateBinding VerticalScrollBarVisibility}"
                                          HorizontalScrollBarVisibility="{TemplateBinding HorizontalScrollBarVisibility}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <StackPanel Margin="0,0,0,10">
        <!-- 顶部工具栏 -->
        <Border Background="#2D2D30" 
                BorderBrush="#3F3F46" 
                BorderThickness="0,0,0,1"
                Padding="12,8">
            <StackPanel Orientation="Horizontal">
                <ui:Button Content="启动" 
                           Icon="{ui:SymbolIcon Play24}"
                           Command="{Binding ViewModel.StartTerminalCommand}"
                           Margin="0,0,8,0"/>
                <ui:Button Content="停止" 
                           Icon="{ui:SymbolIcon Stop24}"
                           Command="{Binding ViewModel.StopTerminalCommand}"
                           Margin="0,0,8,0"/>
                <ui:Button Content="清空" 
                           Icon="{ui:SymbolIcon Delete24}"
                           Command="{Binding ViewModel.ClearOutputCommand}"
                           Margin="0,0,8,0"/>
                <ui:Button Content="刷新" 
                           Icon="{ui:SymbolIcon ArrowSync24}"
                           Command="{Binding ViewModel.RefreshSessionsCommand}"
                           Margin="0,0,16,0"/>
                
                <!-- 状态显示 -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="状态:" Foreground="#CCCCCC" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding ViewModel.SelectedSession.Status}" 
                               Foreground="{Binding ViewModel.SelectedSession.IsRunning, Converter={StaticResource BooleanToColorConverter}}"
                               FontWeight="Bold"/>
                    <TextBlock Text="项目:" Foreground="#CCCCCC" Margin="16,0,4,0"/>
                    <TextBlock Text="{Binding ViewModel.SelectedSession.ProjectName}" Foreground="#FFFFFF"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 主要内容区域 -->
        <Grid Height="650">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 终端标签页和输出区域 -->
            <TabControl ItemsSource="{Binding ViewModel.TerminalSessions}"
                        SelectedItem="{Binding ViewModel.SelectedSession}"
                        Background="#1E1E1E"
                        BorderThickness="0"
                        ItemContainerStyle="{StaticResource TerminalTabStyle}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="WindowConsole20" 
                                           FontSize="14" 
                                           Margin="0,0,6,0"
                                           Foreground="{Binding IsRunning, Converter={StaticResource BooleanToColorConverter}}"/>
                            <TextBlock Text="{Binding ProjectName}" 
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <ScrollViewer Background="#1E1E1E" 
                                          VerticalScrollBarVisibility="Auto" 
                                          HorizontalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding OutputLines}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       Foreground="#00FF00" 
                                                       FontFamily="Consolas, Courier New"
                                                       FontSize="12"
                                                       Margin="8,1"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>

            <!-- 无会话时的提示 -->
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ViewModel.TerminalSessions.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Opacity="0.6">
                    <ui:SymbolIcon Symbol="WindowConsole20" 
                                   FontSize="48" 
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                    <TextBlock Text="暂无终端会话" 
                               FontSize="16" 
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="启动项目后将自动创建终端会话" 
                               FontSize="12" 
                               Foreground="#999999"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 底部状态栏 -->
        <Border Background="#2D2D30" 
                BorderBrush="#3F3F46" 
                BorderThickness="0,1,0,0"
                Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="工作目录:" Foreground="#CCCCCC" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding ViewModel.SelectedSession.ProjectPath}" 
                               Foreground="#FFFFFF" 
                               FontFamily="Consolas"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="启动时间:" Foreground="#CCCCCC" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding ViewModel.SelectedSession.StartTime, StringFormat='yyyy-MM-dd HH:mm:ss'}" 
                               Foreground="#FFFFFF"/>
                    <TextBlock Text="会话数:" Foreground="#CCCCCC" Margin="16,0,4,0"/>
                    <TextBlock Text="{Binding ViewModel.TerminalSessions.Count}" 
                               Foreground="#FFFFFF"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 加载指示器 -->
        <Grid Background="#80000000" 
              Visibility="{Binding ViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ui:ProgressRing IsIndeterminate="True" 
                             Width="48" 
                             Height="48"/>
        </Grid>
    </StackPanel>
</Page>