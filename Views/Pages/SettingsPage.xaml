<Page
    x:Class="ProjectManager.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:ProjectManager.Helpers"
    xmlns:local="clr-namespace:ProjectManager.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>

    <StackPanel Margin="16">
            <!-- Git 设置 -->
            <ui:Card Margin="0,0,0,16" Padding="16">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Git 设置" />
                    
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="Git可执行文件路径" Margin="0,0,0,4"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ui:TextBox 
                                Grid.Column="0"
                                Text="{Binding GitExecutablePath, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="选择Git可执行文件路径 (如: C:\Program Files\Git\bin\git.exe)"/>
                            <ui:Button 
                                Grid.Column="1"
                                Content="浏览"
                                Icon="{ui:SymbolIcon FolderOpen24}"
                                Command="{Binding BrowseGitExecutablePathCommand}"
                                Margin="8,0,0,0"/>
                        </Grid>
                    </StackPanel>
                    
                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="用户名" Margin="0,0,0,4"/>
                            <ui:TextBox 
                                Text="{Binding GitUserName, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="输入Git用户名"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <TextBlock Text="邮箱" Margin="0,0,0,4"/>
                            <ui:TextBox 
                                Text="{Binding GitUserEmail, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="输入Git邮箱"/>
                        </StackPanel>
                    </Grid>
                    
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="默认分支" Margin="0,0,0,4"/>
                        <ui:TextBox 
                            Text="{Binding DefaultGitBranch, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="main"/>
                    </StackPanel>
                    
                    <CheckBox 
                        Content="自动获取Git更新"
                        IsChecked="{Binding AutoFetchGitUpdates}"
                        Margin="0,16,0,0"/>
                </StackPanel>
            </ui:Card>

            <!-- 项目设置 -->
            <ui:Card Margin="0,0,0,16" Padding="16">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="项目设置" />
                    
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="默认项目路径" Margin="0,0,0,4"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ui:TextBox 
                                Grid.Column="0"
                                Text="{Binding DefaultProjectPath, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="选择默认项目路径"/>
                            <ui:Button 
                                Grid.Column="1"
                                Content="浏览"
                                Icon="{ui:SymbolIcon FolderOpen24}"
                                Command="{Binding BrowseDefaultProjectPathCommand}"
                                Margin="8,0,0,0"/>
                        </Grid>
                    </StackPanel>
                    
                    <CheckBox 
                        Content="自动启动项目"
                        IsChecked="{Binding AutoStartProjects}"
                        Margin="0,16,0,0"/>
                    
                    <CheckBox 
                        Content="自动保存项目"
                        IsChecked="{Binding AutoSaveProjects}"
                        Margin="0,8,0,0"/>
                    
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="项目刷新间隔（秒）" Margin="0,0,0,4"/>
                        <ui:NumberBox 
                            Value="{Binding ProjectRefreshInterval}"
                            Minimum="10"
                            Maximum="300"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="最大最近项目数" Margin="0,0,0,4"/>
                        <ui:NumberBox 
                            Value="{Binding MaxRecentProjects}"
                            Minimum="5"
                            Maximum="50"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <!-- 应用程序设置 -->
            <ui:Card Margin="0,0,0,16" Padding="16">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="应用程序设置" />

                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="首选终端" Margin="0,0,0,4"/>
                        <ComboBox SelectedValue="{Binding PreferredTerminal}" SelectedValuePath="Content">
                            <ComboBoxItem Content="PowerShell"/>
                            <ComboBoxItem Content="CMD"/>
                            <ComboBoxItem Content="Windows Terminal"/>
                            <ComboBoxItem Content="Git Bash"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Margin="0,16,0,0">
                        <TextBlock Text="首选编辑器" Margin="0,0,0,4"/>
                        <ComboBox SelectedItem="{Binding PreferredEditor}">
                            <ComboBoxItem Content="VS Code"/>
                            <ComboBoxItem Content="Visual Studio"/>
                            <ComboBoxItem Content="Notepad++"/>
                            <ComboBoxItem Content="Sublime Text"/>
                            <ComboBoxItem Content="Atom"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <CheckBox 
                        Content="显示通知"
                        IsChecked="{Binding ShowNotifications}"
                        Margin="0,16,0,0"/>
                </StackPanel>
            </ui:Card>

            <!-- 个性化设置 -->
            <ui:Card Margin="0,0,0,16" Padding="16">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="个性化设置" />
                    
                    <TextBlock Margin="0,16,0,4" Text="主题" />
                    <RadioButton
                        Margin="0,8,0,0"
                        Command="{Binding ChangeThemeCommand, Mode=OneWay}"
                        CommandParameter="theme_light"
                        Content="浅色主题"
                        GroupName="themeSelect"
                        IsChecked="{Binding CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}" />
                    <RadioButton
                        Margin="0,8,0,0"
                        Command="{Binding ChangeThemeCommand, Mode=OneWay}"
                        CommandParameter="theme_dark"
                        Content="深色主题"
                        GroupName="themeSelect"
                        IsChecked="{Binding CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}" />
                </StackPanel>
            </ui:Card>

            <!-- 操作按钮 -->
            <ui:Card Margin="0,0,0,16" Padding="16">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="操作" />
                    
                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <ui:Button 
                            Content="保存设置"
                            Icon="{ui:SymbolIcon Save24}"
                            Appearance="Primary"
                            Command="{Binding SaveSettingsCommand}"
                            Margin="0,0,8,0"/>
                        <ui:Button 
                            Content="重置设置"
                            Icon="{ui:SymbolIcon ArrowReset24}"
                            Appearance="Caution"
                            Command="{Binding ResetSettingsCommand}"
                            Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <!-- 关于 -->
            <ui:Card Padding="16">
                <StackPanel>
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="关于项目管理器" />
                    <TextBlock 
                        Margin="0,16,0,0" 
                        Text="{Binding AppVersion, Mode=OneWay}" />
                </StackPanel>
            </ui:Card>
    </StackPanel>
</Page>