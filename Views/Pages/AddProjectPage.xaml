<Page
    x:Class="ProjectManager.Views.Pages.AddProjectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="AddProjectPage"
    d:DataContext="{d:DesignInstance local:AddProjectPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 页面标题 -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="添加新项目" FontSize="28" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock Text="创建一个新的项目或导入现有项目" FontSize="14" Opacity="0.7"/>
            </StackPanel>

            <!-- 添加方式选择 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 新建项目 -->
                <ui:Card Grid.Column="0" Margin="0,0,12,0" Padding="24">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="Add24" FontSize="64" Opacity="0.6" Margin="0,0,0,16" HorizontalAlignment="Center"/>
                        <TextBlock Text="新建项目" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="从头开始创建一个新的项目" 
                                   TextWrapping="Wrap" 
                                   TextAlignment="Center" 
                                   Opacity="0.7" 
                                   Margin="0,0,0,16"/>
                        <ui:Button Content="创建新项目" 
                                   Icon="{ui:SymbolIcon Add24}"
                                   Appearance="Primary"
                                   Command="{Binding ViewModel.CreateNewProjectCommand}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </ui:Card>

                <!-- 导入项目 -->
                <ui:Card Grid.Column="1" Margin="12,0,0,0" Padding="24">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="FolderOpen24" FontSize="64" Opacity="0.6" Margin="0,0,0,16" HorizontalAlignment="Center"/>
                        <TextBlock Text="导入项目" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="导入现有的项目文件夹到项目管理器" 
                                   TextWrapping="Wrap" 
                                   TextAlignment="Center" 
                                   Opacity="0.7" 
                                   Margin="0,0,0,16"/>
                        <ui:Button Content="导入现有项目" 
                                   Icon="{ui:SymbolIcon FolderOpen24}"
                                   Command="{Binding ViewModel.ImportExistingProjectCommand}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </ui:Card>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
