<Page
    x:Class="ProjectManager.Views.Pages.ProjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:models="clr-namespace:ProjectManager.Models"
    Title="ProjectsPage"
    d:DataContext="{d:DesignInstance local:ProjectsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <Thickness x:Key="CustomCardPadding">14,16,14,16</Thickness>
        <Thickness x:Key="CustomCardBorderThickness">1</Thickness>
        <CornerRadius x:Key="CustomCardCornerRadius">12</CornerRadius>

        <Style x:Key="RoundedCardStyle" TargetType="ui:Card">
            <Setter Property="Background" Value="{DynamicResource CardBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource CardForeground}" />
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
            <Setter Property="BorderThickness" Value="{StaticResource CustomCardBorderThickness}" />
            <Setter Property="Padding" Value="{StaticResource CustomCardPadding}" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="{DynamicResource ControlContentThemeFontSize}" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Border.CornerRadius" Value="{StaticResource CustomCardCornerRadius}" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ui:Card">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Border
                                x:Name="ContentBorder"
                                Padding="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding Border.CornerRadius}">
                                <ContentPresenter
                                    x:Name="ContentPresenter"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </Border>

                            <Border
                                x:Name="FooterBorder"
                                Grid.Row="1"
                                Padding="{TemplateBinding Padding}"
                                Background="{DynamicResource CardFooterBackground}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="0,0,16,16"
                                Visibility="Collapsed">
                                <ContentPresenter x:Name="FooterContentPresenter" Content="{TemplateBinding Footer}" />
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="HasFooter" Value="True">
                                <Setter TargetName="FooterBorder" Property="Visibility" Value="Visible" />
                                <Setter TargetName="ContentBorder" Property="CornerRadius" Value="16,16,0,0" />
                                <Setter TargetName="ContentBorder" Property="BorderThickness" Value="1,1,1,0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="ProjectCardTemplate" DataType="{x:Type models:Project}">
            <ui:Card Margin="0,4,4,0" Padding="12" Width="450" Height="210" Style="{StaticResource RoundedCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 项目名称和菜单按钮 -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" ToolTip="{Binding Name}" ToolTipService.Placement="Mouse"/>
                        
                        <!-- 下拉菜单按钮 -->
                        <ui:Button Grid.Column="1" 
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Right"
                                   Width="32"
                                   Height="32"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   BorderBrush="Transparent"
                                   Click="MenuButton_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="MoreVertical20" FontSize="24"/>
                            </ui:Button.Icon>
                            <ui:Button.ContextMenu>
                                <ContextMenu>
                                    <!-- 基础操作 -->
                                    <MenuItem Header="在资源管理器中打开" 
                                              Command="{Binding OpenProjectInExplorerCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                        <MenuItem.Icon>
                                            <ui:SymbolIcon Symbol="Folder24"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    
                                    <Separator/>
                                    
                                    <!-- 删除操作 -->
                                    <MenuItem Header="删除项目" 
                                              Command="{Binding DeleteProjectCommand}"
                                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                        <MenuItem.Icon>
                                            <ui:SymbolIcon Symbol="Delete24" Foreground="Red"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </ui:Button.ContextMenu>
                        </ui:Button>
                    </Grid>
                    
                    <!-- 项目描述 -->
                    <TextBlock Grid.Row="1" Text="{Binding Description}" TextWrapping="Wrap" Opacity="0.8" Margin="0,0,0,8" MaxHeight="60"/>
                    
                    <!-- 项目状态和Git信息 -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                        <ui:Badge Content="{Binding StatusDisplay}" Appearance="{Binding Status, Converter={StaticResource StatusToBadgeConverter}}" Margin="0,0,8,0"/>
                        
                        <!-- Git状态 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,8,0" Visibility="{Binding GitInfo.IsGitRepository, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ui:SymbolIcon Symbol="Branch24" FontSize="12" Foreground="Green" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding GitInfo.CurrentBranch}" FontSize="11" Opacity="0.7" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <ui:Badge Content="{Binding GitInfo.StatusDisplay}" 
                                      Appearance="{Binding GitInfo.Status, Converter={StaticResource GitStatusToBadgeConverter}}" 
                                      FontSize="10" 
                                      Margin="0,0,4,0"/>
                        </StackPanel>
                        
                        <TextBlock Text="{Binding Framework}" Opacity="0.6" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 路径信息 -->
                    <TextBlock Grid.Row="3" Text="{Binding LocalPath}" FontSize="12" Opacity="0.6" TextTrimming="CharacterEllipsis" Margin="0,0,0,8"/>
                    
                    <!-- 最后修改时间 -->
                    <TextBlock Grid.Row="4" Text="{Binding LastModifiedDisplay, StringFormat='最后修改: {0}'}" FontSize="11" Opacity="0.5" Margin="0,0,0,8"/>
                    
                    <!-- 空白区域 -->
                    <Grid Grid.Row="5"/>
                    
                    <!-- 操作按钮 -->
                    <WrapPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Left">
                        <ui:Button 
                            Content="{Binding Status, Converter={StaticResource StatusToToggleButtonTextConverter}}" 
                            Appearance="{Binding Status, Converter={StaticResource StatusToToggleButtonAppearanceConverter}}"
                            Command="{Binding DataContext.ToggleProjectCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            IsEnabled="{Binding Status, Converter={StaticResource StatusToToggleButtonEnabledConverter}}"
                            Margin="0,0,4,4">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="{Binding Status, Converter={StaticResource StatusToToggleButtonIconConverter}}"/>
                            </ui:Button.Icon>
                        </ui:Button>
                        <ui:Button 
                            Content="Git" 
                            Icon="{ui:SymbolIcon Branch24}"
                            Command="{Binding DataContext.ManageGitCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Visibility="{Binding ., Converter={StaticResource HasGitRepositoryToVisibilityConverter}}"
                            Margin="0,0,4,4"/>
                        <ui:Button 
                            Content="环境变量" 
                            Icon="{ui:SymbolIcon Settings24}"
                            Command="{Binding DataContext.ManageEnvironmentVariablesCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Margin="0,0,4,4"/>
                        <ui:Button 
                            Content="设置" 
                            Icon="{ui:SymbolIcon Options24}"
                            Command="{Binding DataContext.EditProjectCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Margin="0,0,4,4"/>
                        <ui:Button 
                            Content="终端" 
                            Icon="{ui:SymbolIcon WindowConsole20}"
                            Command="{Binding DataContext.ViewLogsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Margin="0,0,0,4"/>
                    </WrapPanel>
                </Grid>
            </ui:Card>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <ui:TextBox 
                    x:Name="SearchBox"
                    PlaceholderText="搜索项目..."
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    MinWidth="280"
                    Margin="0,0,16,0">
                    <ui:TextBox.Icon>
                        <ui:SymbolIcon Symbol="Search24"/>
                    </ui:TextBox.Icon>
                </ui:TextBox>
                
                <ComboBox 
                    SelectedItem="{Binding SelectedStatusFilter}"
                    ItemsSource="{Binding StatusFilters}"
                    MinWidth="70"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ui:Button 
                    Content="新建项目" 
                    Icon="{ui:SymbolIcon Add24}"
                    Appearance="Primary"
                    Command="{Binding CreateProjectCommand}"
                    Margin="0,0,4,0"/>
                <ui:Button 
                    Content="Git克隆" 
                    Icon="{ui:SymbolIcon Branch24}"
                    Command="{Binding CloneFromGitCommand}"
                    Margin="4,0,4,0"/>
                <ui:Button 
                    Content="刷新" 
                    Icon="{ui:SymbolIcon ArrowSync24}"
                    Command="{Binding RefreshCommand}"
                    Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 项目列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl 
                ItemsSource="{Binding FilteredProjects}"
                ItemTemplate="{StaticResource ProjectCardTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- 空状态 -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Visibility="{Binding HasProjects, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <ui:SymbolIcon Symbol="Apps24" FontSize="64" Opacity="0.3" Margin="0,0,0,16"/>
            <TextBlock Text="还没有项目" FontSize="18" Opacity="0.6" Margin="0,0,0,8"/>
            <TextBlock Text="点击'新建项目'开始创建您的第一个项目" Opacity="0.4" Margin="0,0,0,16"/>
            <ui:Button 
                Content="新建项目" 
                Icon="{ui:SymbolIcon Add24}"
                Appearance="Primary"
                Command="{Binding CreateProjectCommand}"/>
        </StackPanel>
    </Grid>
</Page>
