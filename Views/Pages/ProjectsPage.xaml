<Page
    x:Class="ProjectManager.Views.Pages.ProjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:models="clr-namespace:ProjectManager.Models"
    Title="ProjectsPage"
    d:DataContext="{d:DesignInstance local:ProjectsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="ProjectCardTemplate" DataType="{x:Type models:Project}">
            <ui:Card Margin="8" Padding="16" MinWidth="300" MaxWidth="350">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 项目名称 -->
                    <TextBlock Grid.Row="0" Text="{Binding Name}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    
                    <!-- 项目描述 -->
                    <TextBlock Grid.Row="1" Text="{Binding Description}" TextWrapping="Wrap" Opacity="0.8" Margin="0,0,0,8" MaxHeight="60"/>
                    
                    <!-- 项目状态和Git信息 -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                        <ui:Badge Content="{Binding StatusDisplay}" Appearance="{Binding Status, Converter={StaticResource StatusToBadgeConverter}}" Margin="0,0,8,0"/>
                        
                        <!-- Git状态 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,8,0" Visibility="{Binding GitInfo.IsGitRepository, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ui:SymbolIcon Symbol="Branch24" FontSize="12" Foreground="Green" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding GitInfo.CurrentBranch}" FontSize="11" Opacity="0.7" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <ui:Badge Content="{Binding GitInfo.StatusDisplay}" 
                                      Appearance="{Binding GitInfo.Status, Converter={StaticResource GitStatusToBadgeConverter}}" 
                                      FontSize="10" 
                                      Margin="0,0,4,0"/>
                        </StackPanel>
                        
                        <TextBlock Text="{Binding Framework}" Opacity="0.6" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 路径信息 -->
                    <TextBlock Grid.Row="3" Text="{Binding LocalPath}" FontSize="12" Opacity="0.6" TextTrimming="CharacterEllipsis" Margin="0,0,0,8"/>
                    
                    <!-- 最后修改时间 -->
                    <TextBlock Grid.Row="4" Text="{Binding LastModifiedDisplay, StringFormat='最后修改: {0}'}" FontSize="11" Opacity="0.5" Margin="0,0,0,8"/>
                    
                    <!-- 空白区域 -->
                    <Grid Grid.Row="5"/>
                    
                    <!-- 操作按钮 -->
                    <WrapPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                        <ui:Button 
                            Content="启动" 
                            Icon="{ui:SymbolIcon Play24}"
                            Appearance="Primary"
                            Command="{Binding DataContext.StartProjectCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            IsEnabled="{Binding Status, Converter={StaticResource StatusToStartEnabledConverter}}"
                            Margin="0,0,4,4"/>
                        <ui:Button 
                            Content="停止" 
                            Icon="{ui:SymbolIcon Stop24}"
                            Appearance="Secondary"
                            Command="{Binding DataContext.StopProjectCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            IsEnabled="{Binding Status, Converter={StaticResource StatusToStopEnabledConverter}}"
                            Margin="0,0,4,4"/>
                        <ui:Button 
                            Content="Git" 
                            Icon="{ui:SymbolIcon Branch24}"
                            Command="{Binding DataContext.ManageGitCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Margin="0,0,4,4"/>
                        <ui:Button 
                            Content="设置" 
                            Icon="{ui:SymbolIcon Settings24}"
                            Command="{Binding DataContext.EditProjectCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Margin="0,0,4,4"/>
                        <ui:Button 
                            Content="日志" 
                            Icon="{ui:SymbolIcon Document24}"
                            Command="{Binding DataContext.ViewLogsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                            CommandParameter="{Binding}"
                            Margin="0,0,0,4"/>
                    </WrapPanel>
                </Grid>
            </ui:Card>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <ui:TextBox 
                    x:Name="SearchBox"
                    PlaceholderText="搜索项目..."
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                    MinWidth="280"
                    Margin="0,0,16,0">
                    <ui:TextBox.Icon>
                        <ui:SymbolIcon Symbol="Search24"/>
                    </ui:TextBox.Icon>
                </ui:TextBox>
                
                <ComboBox 
                    SelectedItem="{Binding SelectedStatusFilter}"
                    ItemsSource="{Binding StatusFilters}"
                    MinWidth="70"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <ui:Button 
                    Content="新建项目" 
                    Icon="{ui:SymbolIcon Add24}"
                    Appearance="Primary"
                    Command="{Binding CreateProjectCommand}"
                    Margin="0,0,4,0"/>
                <ui:Button 
                    Content="导入项目" 
                    Icon="{ui:SymbolIcon FolderOpen24}"
                    Command="{Binding ImportProjectCommand}"
                    Margin="4,0,4,0"/>
                <ui:Button 
                    Content="刷新" 
                    Icon="{ui:SymbolIcon ArrowSync24}"
                    Command="{Binding RefreshCommand}"
                    Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 项目列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl 
                ItemsSource="{Binding FilteredProjects}"
                ItemTemplate="{StaticResource ProjectCardTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- 空状态 -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Visibility="{Binding HasProjects, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <ui:SymbolIcon Symbol="Apps24" FontSize="64" Opacity="0.3" Margin="0,0,0,16"/>
            <TextBlock Text="还没有项目" FontSize="18" Opacity="0.6" Margin="0,0,0,8"/>
            <TextBlock Text="点击'新建项目'开始创建您的第一个项目" Opacity="0.4" Margin="0,0,0,16"/>
            <ui:Button 
                Content="新建项目" 
                Icon="{ui:SymbolIcon Add24}"
                Appearance="Primary"
                Command="{Binding CreateProjectCommand}"/>
        </StackPanel>
    </Grid>
</Page>
