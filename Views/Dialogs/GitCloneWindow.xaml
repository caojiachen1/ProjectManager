<ui:FluentWindow x:Class="ProjectManager.Views.Dialogs.GitCloneWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 mc:Ignorable="d"
                 Title="{DynamicResource Git_CloneTitle}"
                 Height="600"
                 Width="700"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="NoResize"
                 WindowBackdropType="Mica"
                 ExtendsContentIntoTitleBar="True"
                 WindowCornerPreference="Round">
    
    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- 暗黑主题样式 -->
        <Style x:Key="DarkTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        
        <Style x:Key="DarkGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Background" Value="#2D2D30"/>
        </Style>
        
        <Style x:Key="DarkExpanderStyle" TargetType="Expander">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#2D2D30"/>
        </Style>
        
        <Style x:Key="DarkLogTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="Background" Value="#1E1E1E"/>
        </Style>
    </ui:FluentWindow.Resources>
    
    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{DynamicResource Git_CloneTitle}"
            Grid.Row="0"
            Padding="5,0,0,0">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="Branch24" Margin="10,-3,10,0"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <Grid Margin="20,50,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Git仓库URL -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock FontWeight="Medium" Margin="0,0,0,5">
                <Run Text="{DynamicResource Git_RepoUrl}"/>
                <Run Text=" *" Foreground="Red"/>
            </TextBlock>
            <ui:TextBox x:Name="UrlTextBox"
                        Text="{Binding RepositoryUrl, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="{DynamicResource Git_RepoUrlPlaceholder}"
                        Icon="{ui:SymbolIcon Link24}"/>
            <TextBlock Text="{Binding UrlValidationMessage}" 
                       Foreground="#FF6B6B" 
                       FontSize="12" 
                       Margin="0,5,0,0"
                       Visibility="{Binding HasUrlValidationError, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>

        <!-- 本地路径 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock FontWeight="Medium" 
                       Margin="0,0,0,5"
                       Style="{StaticResource DarkTextBlockStyle}">
                <Run Text="{DynamicResource Git_LocalPath}"/>
                <Run Text=" *" Foreground="Red"/>
            </TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ui:TextBox Grid.Column="0"
                            Text="{Binding LocalPath, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="{DynamicResource Git_LocalPathPlaceholder}"
                            Icon="{ui:SymbolIcon Folder24}"/>
                <ui:Button Grid.Column="1" 
                           Content="{DynamicResource Button_Browse}" 
                           Command="{Binding BrowseLocalPathCommand}"
                           Margin="10,0,0,0"
                           Appearance="Secondary"/>
            </Grid>
        </StackPanel>

        <!-- 框架选择 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="{DynamicResource Git_Framework}" FontWeight="Medium" Margin="0,0,0,5" Style="{StaticResource DarkTextBlockStyle}"/>
            <ComboBox SelectedItem="{Binding SelectedFramework}" 
                      ItemsSource="{Binding AvailableFrameworks}"
                      HorizontalAlignment="Stretch">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Margin="0,0,8,0" VerticalAlignment="Center">
                                <ui:SymbolIcon.Style>
                                    <Style TargetType="ui:SymbolIcon">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding}" Value="ComfyUI">
                                                <Setter Property="Symbol" Value="Flow16"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="Node.js">
                                                <Setter Property="Symbol" Value="Code16"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value=".NET">
                                                <Setter Property="Symbol" Value="CodeCs16"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="其他">
                                                <Setter Property="Symbol" Value="AppGeneric20"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ui:SymbolIcon.Style>
                            </ui:SymbolIcon>
                            <TextBlock Text="{Binding Converter={StaticResource FrameworkToLocalizedNameConverter}}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!-- 其他选项 -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <CheckBox Content="{DynamicResource Git_AutoAddToManager}" 
                      IsChecked="{Binding AutoAddToManager}"/>
        </StackPanel>

        <!-- 进度显示 -->
        <StackPanel Grid.Row="4" 
                    Margin="0,0,0,15"
                    Visibility="{Binding IsCloning, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="{DynamicResource Git_CloneProgress}" 
                       FontWeight="Medium" 
                       Margin="0,0,0,5"
                       Style="{StaticResource DarkTextBlockStyle}"/>
            <ProgressBar Value="{Binding CloneProgressValue}" 
                         Maximum="100" 
                         Height="8" 
                         Margin="0,0,0,5"
                         Foreground="#4CAF50"
                         Background="#404040"/>
            <TextBlock Text="{Binding CloneStatusMessage}" 
                       FontSize="12" 
                       Foreground="#B0B0B0"/>
        </StackPanel>

        <!-- 日志输出 -->
        <GroupBox Grid.Row="5" 
                  Header="{DynamicResource Git_CloneLog}" 
                  Margin="0,0,0,15"
                  Style="{StaticResource DarkGroupBoxStyle}">
            <ScrollViewer x:Name="LogScrollViewer" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto">
                <TextBlock x:Name="LogTextBlock"
                           Text="{Binding CloneLog}" 
                           FontFamily="Consolas" 
                           FontSize="11" 
                           Style="{StaticResource DarkLogTextBlockStyle}"
                           Padding="10"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </GroupBox>

            <!-- 按钮区域 -->
            <StackPanel Grid.Row="6" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <ui:Button Content="{DynamicResource Git_Clone}" 
                           Command="{Binding CloneCommand}"
                           IsEnabled="{Binding CanClone}"
                           Appearance="Primary"
                           Margin="0,0,10,0"/>
                <ui:Button Content="{DynamicResource Button_Cancel}" 
                           Click="CancelButton_Click"
                           Appearance="Secondary"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
