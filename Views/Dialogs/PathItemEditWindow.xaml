<ui:FluentWindow
    x:Class="ProjectManager.Views.Dialogs.PathItemEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="编辑路径项"
    Width="500"
    Height="250"
    MinWidth="400"
    MinHeight="150"
    WindowStartupLocation="CenterOwner"
    ResizeMode="CanResize"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="编辑路径项"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True"
            Padding="5,0,0,0">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="Edit24" Margin="10,-3,10,0"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <Grid Margin="24,32,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 路径输入 -->
            <StackPanel Grid.Row="0" Margin="0,20,0,16">
                <TextBlock Text="路径:" Margin="0,0,0,8" FontWeight="SemiBold"/>
                <ui:TextBox Text="{Binding Path, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="输入路径或使用浏览按钮选择...">
                    <ui:TextBox.Icon>
                        <ui:SymbolIcon Symbol="Folder24"/>
                    </ui:TextBox.Icon>
                </ui:TextBox>
            </StackPanel>

            <!-- 浏览按钮 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,16">
                <ui:Button Content="浏览文件夹..." 
                           Command="{Binding BrowseFolderCommand}"
                           Appearance="Secondary"
                           Margin="0,0,8,0"
                           Padding="16,6"/>
                <ui:Button Content="浏览文件..." 
                           Command="{Binding BrowseFileCommand}"
                           Appearance="Secondary"
                           Padding="16,6"/>
            </StackPanel>

            <!-- 底部按钮 -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <ui:Button Content="确定" 
                           Command="{Binding SaveCommand}"
                           Appearance="Primary"
                           IsDefault="True"
                           Margin="0,0,20,0"
                           Padding="20,8"/>
                <ui:Button Content="取消" 
                           Command="{Binding CancelCommand}"
                           Appearance="Secondary"
                           IsCancel="True"
                           Padding="20,8"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>