<ui:FluentWindow
    x:Class="ProjectManager.Views.Dialogs.NodeJSProjectSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{DynamicResource NodeJS_SettingsTitle}"
    Width="700"
    Height="750"
    MinWidth="600"
    MinHeight="650"
    d:DataContext="{d:DesignInstance local:NodeJSProjectSettingsWindow,
                                     IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{DynamicResource NodeJS_SettingsTitle}"
            Grid.Row="0"
            Padding="5,0,0,0">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="DesktopEdit24" Margin="10,-3,10,0"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,32,0,0">
            <StackPanel Margin="24">
                <!-- 项目信息展示 -->
                <ui:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{Binding ProjectName}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock Text="{DynamicResource NodeJS_ProjectInfo}" Opacity="0.7" FontSize="12"/>
                        <TextBlock Text="{Binding ProjectPath}" Opacity="0.6" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>
                </ui:Card>

                <!-- Node.js特定配置 -->
                <Expander Header="{DynamicResource NodeJS_Config}" IsExpanded="True" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource NodeJS_StartCommand}" Margin="0,0,0,4"/>
                            <ComboBox SelectedItem="{Binding StartCommand}" 
                                      IsEditable="True"
                                      Text="{Binding StartCommand}">
                                <ComboBoxItem Content="npm start"/>
                                <ComboBoxItem Content="npm run dev"/>
                                <ComboBoxItem Content="npm run serve"/>
                                <ComboBoxItem Content="node app.js"/>
                                <ComboBoxItem Content="node index.js"/>
                                <ComboBoxItem Content="node server.js"/>
                                <ComboBoxItem Content="yarn start"/>
                                <ComboBoxItem Content="yarn dev"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource NodeJS_Port}" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding Port}" 
                                          Minimum="1024" 
                                          Maximum="65535"
                                          PlaceholderText="3000"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource NodeJS_VersionReq}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding NodeVersion, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="{DynamicResource NodeJS_VersionReqPlaceholder}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource NodeJS_PackageManager}" Margin="0,0,0,4"/>
                            <ComboBox SelectedItem="{Binding PackageManager}">
                                <ComboBoxItem Content="npm"/>
                                <ComboBoxItem Content="yarn"/>
                                <ComboBoxItem Content="pnpm"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox Content="{DynamicResource NodeJS_EnableDevMode}" 
                                  IsChecked="{Binding DevelopmentMode}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource NodeJS_EnableHotReload}" 
                                  IsChecked="{Binding HotReload}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource NodeJS_EnableDebug}" 
                                  IsChecked="{Binding DebugMode}"/>
                    </StackPanel>
                </Expander>

                <!-- 构建配置 -->
                <Expander Header="{DynamicResource NodeJS_BuildConfig}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource NodeJS_BuildCommand}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding BuildCommand, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="{DynamicResource NodeJS_BuildCommandPlaceholder}"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource NodeJS_TestCommand}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding TestCommand, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="{DynamicResource NodeJS_TestCommandPlaceholder}"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource NodeJS_OutputPath}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding BuildOutputPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="{DynamicResource NodeJS_OutputPathPlaceholder}"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource AddProject_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseBuildOutputPathCommand}"/>
                            </Grid>
                        </StackPanel>

                        <CheckBox Content="{DynamicResource NodeJS_RunTestsBeforeBuild}" 
                                  IsChecked="{Binding RunTestsBeforeBuild}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource NodeJS_MinifyOutput}" 
                                  IsChecked="{Binding MinifyOutput}"/>
                    </StackPanel>
                </Expander>

                <!-- 环境变量 -->
                <Expander Header="{DynamicResource NodeJS_EnvVars}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ui:TextBox Grid.Column="0" 
                                        Text="{Binding EnvironmentFile, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="{DynamicResource NodeJS_EnvFile}"
                                        Margin="0,0,8,0"/>
                            <ui:Button Grid.Column="1" 
                                       Content="{DynamicResource AddProject_Browse}" 
                                       Icon="{ui:SymbolIcon FolderOpen24}"
                                       Command="{Binding BrowseEnvironmentFileCommand}"/>
                        </Grid>
                        
                        <StackPanel>
                            <TextBlock Text="{DynamicResource NodeJS_CustomEnvVars}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding CustomEnvironmentVars, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="{DynamicResource NodeJS_CustomEnvVarsPlaceholder}"
                                        TextWrapping="Wrap"
                                        MinHeight="60"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- 标签 -->
                <Expander Header="{DynamicResource NodeJS_ProjectTags}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <ui:TextBox Text="{Binding TagsString, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="{DynamicResource NodeJS_TagsPlaceholder}"/>
                    </StackPanel>
                </Expander>

                <!-- 操作按钮 -->
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ui:Button Content="{DynamicResource ProjectSettings_Save}" 
                                   Icon="{ui:SymbolIcon Save24}"
                                   Appearance="Primary"
                                   Command="{Binding SaveCommand}"
                                   Margin="0,0,8,0"/>
                        <ui:Button Content="{DynamicResource ProjectSettings_Cancel}" 
                                   Icon="{ui:SymbolIcon Dismiss24}"
                                   Command="{Binding CancelCommand}"/>
                    </StackPanel>
                    <ui:Button Grid.Column="2" 
                               Content="{DynamicResource NodeJS_DeleteProject}" 
                               Icon="{ui:SymbolIcon Delete24}"
                               Appearance="Danger"
                               Command="{Binding DeleteCommand}"
                               Margin="16,0,0,0"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
