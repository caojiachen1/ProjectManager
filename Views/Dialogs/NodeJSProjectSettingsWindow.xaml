<ui:FluentWindow
    x:Class="ProjectManager.Views.Dialogs.NodeJSProjectSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Node.js项目设置"
    Width="700"
    Height="750"
    MinWidth="600"
    MinHeight="650"
    d:DataContext="{d:DesignInstance local:NodeJSProjectSettingsWindow,
                                     IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="Node.js项目设置"
            Grid.Row="0"
            Padding="5,0,0,0">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="DesktopEdit24" Margin="10,-3,10,0"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,32,0,0">
            <StackPanel Margin="24">
                <!-- 项目信息展示 -->
                <ui:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{Binding ProjectName}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock Text="Node.js JavaScript运行时项目" Opacity="0.7" FontSize="12"/>
                        <TextBlock Text="{Binding ProjectPath}" Opacity="0.6" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>
                </ui:Card>

                <!-- Node.js特定配置 -->
                <Expander Header="Node.js配置" IsExpanded="True" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="启动命令" Margin="0,0,0,4"/>
                            <ComboBox SelectedItem="{Binding StartCommand}" 
                                      IsEditable="True"
                                      Text="{Binding StartCommand}">
                                <ComboBoxItem Content="npm start"/>
                                <ComboBoxItem Content="npm run dev"/>
                                <ComboBoxItem Content="npm run serve"/>
                                <ComboBoxItem Content="node app.js"/>
                                <ComboBoxItem Content="node index.js"/>
                                <ComboBoxItem Content="node server.js"/>
                                <ComboBoxItem Content="yarn start"/>
                                <ComboBoxItem Content="yarn dev"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="服务端口" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding Port}" 
                                          Minimum="1024" 
                                          Maximum="65535"
                                          PlaceholderText="3000"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Node.js版本要求" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding NodeVersion, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="例如: >=16.0.0"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="包管理器" Margin="0,0,0,4"/>
                            <ComboBox SelectedItem="{Binding PackageManager}">
                                <ComboBoxItem Content="npm"/>
                                <ComboBoxItem Content="yarn"/>
                                <ComboBoxItem Content="pnpm"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox Content="启用开发模式 (NODE_ENV=development)" 
                                  IsChecked="{Binding DevelopmentMode}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="启用热重载/监听模式" 
                                  IsChecked="{Binding HotReload}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="启用调试模式 (--inspect)" 
                                  IsChecked="{Binding DebugMode}"/>
                    </StackPanel>
                </Expander>

                <!-- 构建配置 -->
                <Expander Header="构建配置" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="构建命令" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding BuildCommand, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="npm run build"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="测试命令" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding TestCommand, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="npm test"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="输出目录" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding BuildOutputPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="./dist 或 ./build"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseBuildOutputPathCommand}"/>
                            </Grid>
                        </StackPanel>

                        <CheckBox Content="构建前自动运行测试" 
                                  IsChecked="{Binding RunTestsBeforeBuild}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="构建后自动压缩代码" 
                                  IsChecked="{Binding MinifyOutput}"/>
                    </StackPanel>
                </Expander>

                <!-- 环境变量 -->
                <Expander Header="环境变量" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ui:TextBox Grid.Column="0" 
                                        Text="{Binding EnvironmentFile, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText=".env 文件路径"
                                        Margin="0,0,8,0"/>
                            <ui:Button Grid.Column="1" 
                                       Content="浏览" 
                                       Icon="{ui:SymbolIcon FolderOpen24}"
                                       Command="{Binding BrowseEnvironmentFileCommand}"/>
                        </Grid>
                        
                        <StackPanel>
                            <TextBlock Text="自定义环境变量" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding CustomEnvironmentVars, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="KEY1=value1;KEY2=value2"
                                        TextWrapping="Wrap"
                                        MinHeight="60"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- 标签 -->
                <Expander Header="项目标签" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <ui:TextBox Text="{Binding TagsString, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="输入标签，用逗号分隔（例如：JavaScript,Node.js,后端,Web API）"/>
                    </StackPanel>
                </Expander>

                <!-- 操作按钮 -->
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ui:Button Content="保存" 
                                   Icon="{ui:SymbolIcon Save24}"
                                   Appearance="Primary"
                                   Command="{Binding SaveCommand}"
                                   Margin="0,0,8,0"/>
                        <ui:Button Content="取消" 
                                   Icon="{ui:SymbolIcon Dismiss24}"
                                   Command="{Binding CancelCommand}"/>
                    </StackPanel>
                    <ui:Button Grid.Column="2" 
                               Content="删除项目" 
                               Icon="{ui:SymbolIcon Delete24}"
                               Appearance="Danger"
                               Command="{Binding DeleteCommand}"
                               Margin="16,0,0,0"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
