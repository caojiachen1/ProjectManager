<ui:FluentWindow
    x:Class="ProjectManager.Views.Dialogs.ComfyUIPluginsManagerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:dialogs="clr-namespace:ProjectManager.Views.Dialogs"
    xmlns:viewModels="clr-namespace:ProjectManager.ViewModels.Dialogs"
    Title="{DynamicResource ComfyUI_PluginsTitle}"
    Width="900"
    Height="480"
    MinWidth="800"
    MinHeight="400"
    WindowStartupLocation="CenterScreen"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    mc:Ignorable="d">

    <!-- DataContext 由依赖注入提供，在代码隐藏中通过服务容器设置 -->

    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{DynamicResource ComfyUI_PluginsTitle}"
            Padding="8,0,0,0" />

        <Grid Margin="0,32,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 插件列表：改回 Wpf.Ui DataGrid，实现列自动宽度和文本裁剪 -->
            <Border Grid.Row="0"
                    Margin="16"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    Background="{DynamicResource ControlFillColorDefaultBrush}">
                <ui:DataGrid x:Name="PluginsDataGrid"
                             AutoGenerateColumns="False"
                             ItemsSource="{Binding Plugins}"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="False"
                             GridLinesVisibility="All"
                             HorizontalGridLinesBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                             VerticalGridLinesBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                             HeadersVisibility="All"
                             ColumnHeaderHeight="28"
                             RowHeaderWidth="0"
                             BorderThickness="0"
                             Background="{DynamicResource ControlAltFillColorSecondaryBrush}"
                             RowBackground="{DynamicResource ControlAltFillColorSecondaryBrush}"
                             RowHeight="28">

                    <ui:DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0" />
                            <!-- 使单元格垂直居中显示内容 -->
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                        </Style>
                    </ui:DataGrid.RowStyle>

                    <ui:DataGrid.Resources>
                        <Style x:Key="TightTextCellStyle" TargetType="TextBlock">
                            <Setter Property="Padding" Value="4,0" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                        </Style>
                    </ui:DataGrid.Resources>
                    <ui:DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="{DynamicResource ComfyUI_PluginEnabled}"
                                                Binding="{Binding IsEnabled}"
                                                Width="Auto" />

                        <DataGridTextColumn Header="{DynamicResource ComfyUI_PluginName}"
                                            Binding="{Binding Name}"
                                            Width="SizeToCells"
                                            ElementStyle="{StaticResource TightTextCellStyle}" />

                        <DataGridTextColumn Header="{DynamicResource ComfyUI_PluginRemoteUrl}"
                                            Binding="{Binding RemoteUrl}"
                                            Width="SizeToCells"
                                            ElementStyle="{StaticResource TightTextCellStyle}" />

                        <DataGridTextColumn Header="{DynamicResource ComfyUI_PluginBranch}"
                                            Binding="{Binding Branch}"
                                            Width="SizeToCells"
                                            ElementStyle="{StaticResource TightTextCellStyle}" />

                        <DataGridTextColumn Header="{DynamicResource ComfyUI_PluginVersionId}"
                                            Binding="{Binding VersionId}"
                                            Width="SizeToCells"
                                            ElementStyle="{StaticResource TightTextCellStyle}" />

                        <DataGridTextColumn Header="{DynamicResource ComfyUI_PluginLastCommit}"
                                            Binding="{Binding LastCommitMessage}"
                                            Width="SizeToCells"
                                            ElementStyle="{StaticResource TightTextCellStyle}" />

                        <DataGridTextColumn Header="{DynamicResource ComfyUI_PluginLastUpdate}"
                                            Binding="{Binding LastUpdated}"
                                            Width="SizeToCells"
                                            ElementStyle="{StaticResource TightTextCellStyle}" />

                        <!-- 操作列：移除按钮 -->
                        <DataGridTemplateColumn Header="{DynamicResource ComfyUI_PluginActions}" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                        <Button Content="{DynamicResource ComfyUI_PluginRemove}"
                                            Padding="6,2"
                                            Margin="6,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}}"
                                            CommandParameter="{Binding}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </Border>
        </Grid>
    </Grid>
</ui:FluentWindow>
