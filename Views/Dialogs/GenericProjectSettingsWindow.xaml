<ui:FluentWindow
    x:Class="ProjectManager.Views.Dialogs.GenericProjectSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{DynamicResource Generic_SettingsTitle}"
    Width="600"
    Height="700"
    MinWidth="550"
    MinHeight="650"
    d:DataContext="{d:DesignInstance local:GenericProjectSettingsWindow,
                                     IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{DynamicResource Generic_SettingsTitle}"
            Grid.Row="0"
            Padding="5,0,0,0">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="DesktopEdit24" Margin="10,-3,10,0"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,32,0,0">
            <StackPanel Margin="24">
                <!-- 基本信息 -->
                <Expander Header="{DynamicResource Generic_BasicInfo}" IsExpanded="True" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource Generic_ProjectName}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="{DynamicResource Generic_ProjectNamePlaceholder}"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource Generic_ProjectDescription}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding ProjectDescription, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="{DynamicResource Generic_ProjectDescriptionPlaceholder}"
                                        TextWrapping="Wrap"
                                        AcceptsReturn="True"
                                        MinHeight="80"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- 路径配置 -->
                <Expander Header="{DynamicResource Generic_PathConfig}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource Generic_LocalPath}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding LocalPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="{DynamicResource Generic_LocalPathPlaceholder}"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseLocalPathCommand}"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Generic_WorkingDirectory}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding WorkingDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="{DynamicResource Generic_WorkingDirectoryPlaceholder}"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseWorkingDirectoryCommand}"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- 启动配置 -->
                <Expander Header="{DynamicResource Generic_StartConfig}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource Generic_StartCommand}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <ui:TextBox Grid.Row="0"
                                            Text="{Binding StartCommand, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="{DynamicResource Generic_StartCommandPlaceholder}"
                                            TextWrapping="Wrap"/>
                                <!-- 框架推荐命令 -->
                                <ItemsControl Grid.Row="1" 
                                              ItemsSource="{Binding FrameworkCommands}"
                                              Margin="0,8,0,0"
                                              Visibility="{Binding FrameworkCommands.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <ui:Button Content="{Binding}"
                                                       Appearance="Secondary"
                                                       FontSize="10"
                                                       Padding="8,4"
                                                       Margin="0,0,4,4"
                                                       Command="{Binding DataContext.ApplyFrameworkCommandCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                       CommandParameter="{Binding}"
                                                       ToolTip="点击应用此命令"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </StackPanel>
                        <CheckBox Content="{DynamicResource Generic_AutoStart}" IsChecked="{Binding AutoStart}"/>
                    </StackPanel>
                </Expander>

                <!-- 标签 -->
                <Expander Header="{DynamicResource Generic_Tags}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <ui:TextBox Text="{Binding TagsString, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="{DynamicResource Generic_TagsPlaceholder}"/>
                    </StackPanel>
                </Expander>

                <!-- 操作按钮 -->
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ui:Button Content="{DynamicResource Generic_Save}" 
                                   Icon="{ui:SymbolIcon Save24}"
                                   Appearance="Primary"
                                   Command="{Binding SaveCommand}"
                                   Margin="0,0,4,0"/>
                        <ui:Button Content="{DynamicResource Generic_Cancel}" 
                                   Icon="{ui:SymbolIcon Dismiss24}"
                                   Command="{Binding CancelCommand}"
                                   Margin="4,0,0,0"/>
                    </StackPanel>
                    <ui:Button Grid.Column="2" 
                               Content="{DynamicResource Generic_DeleteProject}" 
                               Icon="{ui:SymbolIcon Delete24}"
                               Appearance="Danger"
                               Command="{Binding DeleteCommand}"
                               Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Margin="16,0,0,0"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
