<ui:FluentWindow
    x:Class="ProjectManager.Views.Dialogs.NewProjectWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{DynamicResource NewProject_Title}"
    Width="500"
    Height="700"
    MinWidth="450"
    MinHeight="500"
    d:DataContext="{d:DesignInstance local:NewProjectWindow,
                                     IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{DynamicResource NewProject_Title}"
            Grid.Row="0"
            Padding="5,0,0,0">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="Add24" Margin="10,-3,10,0"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,32,0,0">
            <StackPanel Margin="24">
                <!-- 项目基本信息 -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="{DynamicResource NewProject_ProjectInfo}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16"/>
                    
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="{DynamicResource NewProject_ProjectName}" Margin="0,0,0,4"/>
                        <ui:TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="{DynamicResource NewProject_ProjectNamePlaceholder}"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="{DynamicResource NewProject_ProjectPath}" Margin="0,0,0,4"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ui:TextBox Grid.Column="0" 
                                        Text="{Binding ProjectPath, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="{DynamicResource NewProject_ProjectPathPlaceholder}"
                                        Margin="0,0,8,0"/>
                            <ui:Button Grid.Column="1" 
                                       Content="{DynamicResource Button_Browse}" 
                                       Icon="{ui:SymbolIcon FolderOpen24}"
                                       Command="{Binding BrowseProjectPathCommand}"/>
                        </Grid>
                    </StackPanel>
                    
                    <StackPanel>
                        <TextBlock Text="{DynamicResource NewProject_ProjectDesc}" Margin="0,0,0,4"/>
                        <ui:TextBox Text="{Binding ProjectDescription, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="{DynamicResource NewProject_ProjectDescPlaceholder}"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    MinHeight="60"/>
                    </StackPanel>
                </StackPanel>

                <!-- Git仓库扫描设置 -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="{DynamicResource NewProject_GitScan}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    
                    <ui:Card Padding="16" Margin="0,0,0,12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <CheckBox IsChecked="{Binding ScanForGitRepositories}" 
                                          Content="{DynamicResource NewProject_ScanGitRepos}" 
                                          FontWeight="Medium"/>
                            </StackPanel>
                            
                            <TextBlock Text="{DynamicResource NewProject_GitScanDesc}"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Opacity="0.7"
                                       Margin="24,0,0,0"/>
                                       
                            <!-- 扫描进度显示 -->
                            <StackPanel Visibility="{Binding IsScanningGitRepositories, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Margin="24,8,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <ui:SymbolIcon Symbol="ArrowClockwise16" 
                                                   Margin="0,0,4,0" 
                                                   VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding GitScanStatusMessage}" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <ProgressBar Value="{Binding GitScanProgress}" 
                                                Height="4" 
                                                Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </ui:Card>
                </StackPanel>

                <!-- 框架选择 -->
                <StackPanel Margin="0,0,0,24">
                    <TextBlock Text="{DynamicResource NewProject_SelectFramework}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <ui:SymbolIcon Symbol="Warning16" Foreground="Orange" Margin="0,0,4,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{DynamicResource NewProject_FrameworkWarning}" 
                                   Opacity="0.8" FontSize="12" FontWeight="Medium" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 框架下拉选择 -->
                    <ComboBox SelectedItem="{Binding SelectedFramework}" 
                              ItemsSource="{Binding AvailableFrameworks}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Margin="0,0,8,0" VerticalAlignment="Center">
                                        <ui:SymbolIcon.Style>
                                            <Style TargetType="ui:SymbolIcon">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding}" Value="ComfyUI">
                                                        <Setter Property="Symbol" Value="Flow16"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding}" Value="Node.js">
                                                        <Setter Property="Symbol" Value="Code16"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding}" Value=".NET">
                                                        <Setter Property="Symbol" Value="CodeCs16"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding}" Value="其他">
                                                        <Setter Property="Symbol" Value="AppGeneric20"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ui:SymbolIcon.Style>
                                    </ui:SymbolIcon>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Converter={StaticResource FrameworkToLocalizedNameConverter}}" FontWeight="SemiBold"/>
                                        <TextBlock FontSize="11" Opacity="0.7">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding}" Value="ComfyUI">
                                                            <Setter Property="Text" Value="{DynamicResource NewProject_FrameworkComfyUI}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding}" Value="Node.js">
                                                            <Setter Property="Text" Value="{DynamicResource NewProject_FrameworkNodeJS}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding}" Value=".NET">
                                                            <Setter Property="Text" Value="{DynamicResource NewProject_FrameworkDotNet}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding}" Value="其他">
                                                            <Setter Property="Text" Value="{DynamicResource NewProject_FrameworkOther}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- 操作按钮 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ui:Button Content="{DynamicResource NewProject_Next}" 
                                   Icon="{ui:SymbolIcon ArrowRight24}"
                                   Appearance="Primary"
                                   Command="{Binding NextCommand}"
                                   IsEnabled="{Binding CanProceed}"
                                   Margin="0,0,8,0"/>
                        <ui:Button Content="{DynamicResource Button_Cancel}" 
                                   Icon="{ui:SymbolIcon Dismiss24}"
                                   Command="{Binding CancelCommand}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
