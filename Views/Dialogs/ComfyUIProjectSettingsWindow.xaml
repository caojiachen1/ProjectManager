<ui:FluentWindow
    x:Class="ProjectManager.Views.Dialogs.ComfyUIProjectSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ComfyUI项目设置"
    Width="700"
    Height="800"
    MinWidth="600"
    MinHeight="700"
    d:DataContext="{d:DesignInstance local:ComfyUIProjectSettingsWindow,
                                     IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="ComfyUI项目设置"
            Grid.Row="0"
            Padding="5,0,0,0">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="DesktopEdit24" Margin="10,-3,10,0"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,32,0,0">
            <StackPanel Margin="24">
                <!-- 项目信息展示 -->
                <ui:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{Binding ProjectName}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock Text="ComfyUI 工作流项目" Opacity="0.7" FontSize="12"/>
                        <TextBlock Text="{Binding ProjectPath}" Opacity="0.6" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>
                </ui:Card>

                <!-- ComfyUI特定配置 -->
                <Expander Header="ComfyUI配置" IsExpanded="True" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="启动命令" Margin="0,0,0,4"/>
                            <ComboBox SelectedItem="{Binding StartCommand}" 
                                      IsEditable="True"
                                      Text="{Binding StartCommand}">
                                <ComboBoxItem Content="python main.py"/>
                                <ComboBoxItem Content="python main.py --listen"/>
                                <ComboBoxItem Content="python main.py --port 8188"/>
                                <ComboBoxItem Content="python main.py --listen --port 8188"/>
                                <ComboBoxItem Content="python main.py --cpu"/>
                                <ComboBoxItem Content="python main.py --directml"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="服务端口" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding Port}" 
                                          Minimum="1024" 
                                          Maximum="65535"
                                          PlaceholderText="8188"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Python环境路径（可选）" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding PythonPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="留空使用系统默认Python"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowsePythonPathCommand}"/>
                            </Grid>
                        </StackPanel>

                        <CheckBox Content="启动时监听所有网络接口 (--listen)" 
                                  IsChecked="{Binding ListenAllInterfaces}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="启用低显存模式 (--lowvram)" 
                                  IsChecked="{Binding LowVramMode}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="使用CPU运行 (--cpu)" 
                                  IsChecked="{Binding CpuMode}"/>
                    </StackPanel>
                </Expander>

                <!-- 模型配置 -->
                <Expander Header="模型配置" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="模型文件夹路径" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding ModelsPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="./models"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseModelsPathCommand}"/>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="输出文件夹路径" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="./output"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseOutputPathCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="额外启动参数" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding ExtraArgs, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="例如: --preview-method auto"
                                        TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- 工作流配置 -->
                <Expander Header="工作流配置" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="自定义节点文件夹" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding CustomNodesPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="./custom_nodes"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseCustomNodesPathCommand}"/>
                            </Grid>
                        </StackPanel>
                        
                        <CheckBox Content="启动时自动加载默认工作流" 
                                  IsChecked="{Binding AutoLoadWorkflow}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="启用工作流快照保存" 
                                  IsChecked="{Binding EnableWorkflowSnapshots}"/>
                    </StackPanel>
                </Expander>

                <!-- 标签 -->
                <Expander Header="项目标签" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <ui:TextBox Text="{Binding TagsString, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="输入标签，用逗号分隔（例如：AI绘画,图像生成,工作流）"/>
                    </StackPanel>
                </Expander>

                <!-- 操作按钮 -->
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ui:Button Content="保存" 
                                   Icon="{ui:SymbolIcon Save24}"
                                   Appearance="Primary"
                                   Command="{Binding SaveCommand}"
                                   Margin="0,0,8,0"/>
                        <ui:Button Content="取消" 
                                   Icon="{ui:SymbolIcon Dismiss24}"
                                   Command="{Binding CancelCommand}"/>
                    </StackPanel>
                    <ui:Button Grid.Column="2" 
                               Content="删除项目" 
                               Icon="{ui:SymbolIcon Delete24}"
                               Appearance="Danger"
                               Command="{Binding DeleteCommand}"
                               Margin="16,0,0,0"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
