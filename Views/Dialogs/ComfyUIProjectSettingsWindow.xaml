<ui:FluentWindow
    x:Class="ProjectManager.Views.Dialogs.ComfyUIProjectSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:ProjectManager.Helpers"
    xmlns:converters="clr-namespace:ProjectManager.Converters"
    Title="ComfyUI项目设置"
    Width="700"
    Height="800"
    MinWidth="600"
    MinHeight="700"
    d:DataContext="{d:DesignInstance local:ComfyUIProjectSettingsWindow,
                                     IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <ui:FluentWindow.Resources>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:NullableToDoubleConverter x:Key="NullableToDoubleConverter"/>
        <converters:OptionalNumberConverter x:Key="OptionalNumberConverter"/>
        <converters:MemoryManagementModeConverter x:Key="MemoryManagementModeConverter"/>
        <converters:UNetPrecisionModeConverter x:Key="UNetPrecisionModeConverter"/>
        <converters:VAEPrecisionModeConverter x:Key="VAEPrecisionModeConverter"/>
        <converters:AttentionAlgorithmModeConverter x:Key="AttentionAlgorithmModeConverter"/>
        <converters:CacheModeConverter x:Key="CacheModeConverter"/>
    </ui:FluentWindow.Resources>

    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="ComfyUI项目设置"
            Grid.Row="0"
            Padding="5,0,0,0">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="DesktopEdit24" Margin="10,-3,10,0"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,32,0,0">
            <StackPanel Margin="24">
                <!-- 项目信息展示 -->
                <ui:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{Binding ProjectName}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock Text="ComfyUI 工作流项目" Opacity="0.7" FontSize="12"/>
                        <TextBlock Text="{Binding ProjectPath}" Opacity="0.6" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>
                </ui:Card>

                <!-- ComfyUI特定配置 -->
                <Expander Header="基础配置" IsExpanded="True" Margin="0,0,0,16">
                    <StackPanel>
                        <!-- ComfyUI 根目录：自动/手动决定 main.py 和 custom_nodes 的基准路径 -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="ComfyUI 根目录" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0"
                                            Text="{Binding ComfyUIRootPath, UpdateSourceTrigger=PropertyChanged}"
                                            PlaceholderText="例如：D:\ComfyUI 或 项目内的 ComfyUI 目录"
                                            Margin="0,0,8,0"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <ui:Button Content="自动检测"
                                               Margin="0,0,8,0"
                                               Command="{Binding DetectComfyUIRootCommand}"/>
                                    <ui:Button Content="浏览"
                                               Icon="{ui:SymbolIcon FolderOpen24}"
                                               Command="{Binding BrowseComfyUIRootCommand}"/>
                                </StackPanel>
                            </Grid>
                            <TextBlock Margin="0,4,0,0"
                                       FontSize="10"
                                       Foreground="#666666">
                                <Run Text="用于推断 main.py 与 custom_nodes 的所在目录；留空则根据项目路径自动尝试。"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="启动命令" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding StartCommand, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="python main.py --listen --port 8188"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="服务端口" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding Port, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullableToDoubleConverter}}" 
                                          Minimum="1" 
                                          Maximum="65535"
                                          PlaceholderText="8188"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="监听地址" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding ListenAddress, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="127.0.0.1"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Python环境路径（可选）" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding PythonPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="留空使用系统默认Python"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowsePythonPathCommand}"/>
                            </Grid>
                            <TextBlock Margin="0,4,0,0"
                                       FontSize="10"
                                       Foreground="#FF5555"
                                       Visibility="{Binding IsPythonPathValid, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                <Run Text="⚠ 请输入有效的Python可执行文件路径 (python.exe)"/>
                            </TextBlock>
                        </StackPanel>


                        <CheckBox Content="启动时监听所有网络接口 (--listen)" 
                                  IsChecked="{Binding ListenAllInterfaces}" 
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Text="浏览器启动模式" FontWeight="SemiBold" Margin="0,4,0,8"/>
                        <ComboBox SelectedValue="{Binding BrowserAutoLaunchMode}" 
                                  SelectedValuePath="Tag" 
                                  Margin="0,0,0,8">
                            <ComboBoxItem Content="默认行为" Tag="Default"/>
                            <ComboBoxItem Content="自动启动浏览器 (--auto-launch)" Tag="AutoLaunch"/>
                            <ComboBoxItem Content="禁用自动启动浏览器 (--disable-auto-launch)" Tag="DisableAutoLaunch"/>
                        </ComboBox>
                    </StackPanel>
                </Expander>

                <!-- 内存和GPU设置 -->
                <Expander Header="内存和GPU设置" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="内存管理模式" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding MemoryManagementMode}"
                                  SelectedValuePath="Tag"
                                  Margin="0,0,0,12">
                            <ComboBoxItem Content="不设置（默认）" Tag="None"/>
                            <ComboBoxItem Content="仅使用GPU (--gpu-only)" Tag="GpuOnly"/>
                            <ComboBoxItem Content="高显存模式 (--highvram)" Tag="HighVram"/>
                            <ComboBoxItem Content="标准显存模式 (--normalvram)" Tag="NormalVram"/>
                            <ComboBoxItem Content="低显存模式 (--lowvram)" Tag="LowVram"/>
                            <ComboBoxItem Content="无显存模式 (--novram)" Tag="NoVram"/>
                            <ComboBoxItem Content="使用CPU运行 (--cpu)" Tag="CpuMode"/>
                        </ComboBox>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="预留显存 (GB)" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding ReserveVram, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource OptionalNumberConverter}}" 
                                          Minimum="0" 
                                          Maximum="32768"
                                          PlaceholderText="留空使用默认"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"
                                          SmallChange="0.5"
                                          LargeChange="1"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="CUDA设备ID" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding CudaDevice, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource OptionalNumberConverter}}" 
                                          Minimum="0" 
                                          Maximum="15"
                                          PlaceholderText="留空使用默认"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"
                                          SmallChange="1"
                                          LargeChange="1"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="DirectML设备ID" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding DirectmlDevice, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource OptionalNumberConverter}}" 
                                          Minimum="-1" 
                                          Maximum="15"
                                          PlaceholderText="-1表示自动检测"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"
                                          SmallChange="1"
                                          LargeChange="1"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="CUDA内存分配器" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ComboBox SelectedValue="{Binding CudaMemoryAllocatorMode}" 
                                      SelectedValuePath="Tag">
                                <ComboBoxItem Content="默认分配器" Tag="Default"/>
                                <ComboBoxItem Content="使用CUDA分配器 (--cuda-malloc)" Tag="CudaMalloc"/>
                                <ComboBoxItem Content="禁用CUDA分配器 (--disable-cuda-malloc)" Tag="DisableCudaMalloc"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox Content="异步卸载 (--async-offload)" 
                                  IsChecked="{Binding AsyncOffload}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="强制非阻塞操作 (--force-non-blocking)" 
                                  IsChecked="{Binding ForceNonBlocking}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="禁用智能内存管理 (--disable-smart-memory)" 
                                  IsChecked="{Binding DisableSmartMemory}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </Expander>

                <!-- 精度设置 -->
                <Expander Header="精度设置" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="全局精度设置" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding GlobalPrecisionForceMode}" 
                                  SelectedValuePath="Tag" 
                                  Margin="0,0,0,12">
                            <ComboBoxItem Content="不强制（默认）" Tag="None"/>
                            <ComboBoxItem Content="强制FP32 (--force-fp32)" Tag="ForceFP32"/>
                            <ComboBoxItem Content="强制FP16 (--force-fp16)" Tag="ForceFP16"/>
                        </ComboBox>

                        <TextBlock Text="UNet模型精度" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding UnetPrecisionMode}"
                                  SelectedValuePath="Tag"
                                  Margin="0,0,0,12">
                            <ComboBoxItem Content="不设置（默认）" Tag="None"/>
                            <ComboBoxItem Content="FP32 UNet (--fp32-unet)" Tag="FP32"/>
                            <ComboBoxItem Content="FP64 UNet (--fp64-unet)" Tag="FP64"/>
                            <ComboBoxItem Content="BF16 UNet (--bf16-unet)" Tag="BF16"/>
                            <ComboBoxItem Content="FP16 UNet (--fp16-unet)" Tag="FP16"/>
                            <ComboBoxItem Content="FP8 E4M3FN UNet (--fp8_e4m3fn-unet)" Tag="FP8_E4M3FN"/>
                            <ComboBoxItem Content="FP8 E5M2 UNet (--fp8_e5m2-unet)" Tag="FP8_E5M2"/>
                            <ComboBoxItem Content="FP8 E8M0FNU UNet (--fp8_e8m0fnu-unet)" Tag="FP8_E8M0FNU"/>
                        </ComboBox>

                        <TextBlock Text="VAE模型精度" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding VaePrecisionMode}"
                                  SelectedValuePath="Tag"
                                  Margin="0,0,0,12">
                            <ComboBoxItem Content="不设置（默认）" Tag="None"/>
                            <ComboBoxItem Content="FP16 VAE (--fp16-vae)" Tag="FP16"/>
                            <ComboBoxItem Content="FP32 VAE (--fp32-vae)" Tag="FP32"/>
                            <ComboBoxItem Content="BF16 VAE (--bf16-vae)" Tag="BF16"/>
                            <ComboBoxItem Content="CPU VAE (--cpu-vae)" Tag="CPU"/>
                        </ComboBox>

                        <TextBlock Text="文本编码器精度" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding TextEncoderPrecisionMode}" 
                                  SelectedValuePath="Tag" 
                                  Margin="0,0,0,8">
                            <ComboBoxItem Content="不设置（默认）" Tag="None"/>
                            <ComboBoxItem Content="FP8 E4M3FN Text Encoder (--fp8_e4m3fn-text-enc)" Tag="FP8_E4M3FN"/>
                            <ComboBoxItem Content="FP8 E5M2 Text Encoder (--fp8_e5m2-text-enc)" Tag="FP8_E5M2"/>
                            <ComboBoxItem Content="FP16 Text Encoder (--fp16-text-enc)" Tag="FP16"/>
                            <ComboBoxItem Content="FP32 Text Encoder (--fp32-text-enc)" Tag="FP32"/>
                            <ComboBoxItem Content="BF16 Text Encoder (--bf16-text-enc)" Tag="BF16"/>
                        </ComboBox>

                        <CheckBox Content="强制通道在最后 (--force-channels-last)" 
                                  IsChecked="{Binding ForceChannelsLast}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </Expander>

                <!-- 注意力机制设置 -->
                <Expander Header="注意力机制设置" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="注意力算法" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding AttentionAlgorithmMode}"
                                  SelectedValuePath="Tag"
                                  Margin="0,0,0,12">
                            <ComboBoxItem Content="不设置（默认）" Tag="None"/>
                            <ComboBoxItem Content="分割交叉注意力 (--use-split-cross-attention)" Tag="SplitCrossAttention"/>
                            <ComboBoxItem Content="四元交叉注意力 (--use-quad-cross-attention)" Tag="QuadCrossAttention"/>
                            <ComboBoxItem Content="PyTorch交叉注意力 (--use-pytorch-cross-attention)" Tag="PytorchCrossAttention"/>
                            <ComboBoxItem Content="Sage注意力 (--use-sage-attention)" Tag="SageAttention"/>
                            <ComboBoxItem Content="Flash注意力 (--use-flash-attention)" Tag="FlashAttention"/>
                        </ComboBox>

                        <TextBlock Text="其他注意力设置" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <CheckBox Content="禁用Xformers (--disable-xformers)" 
                                  IsChecked="{Binding DisableXformers}" 
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Text="注意力上投模式" FontWeight="SemiBold" Margin="0,4,0,8"/>
                        <ComboBox SelectedValue="{Binding AttentionUpcastMode}" 
                                  SelectedValuePath="Tag" 
                                  Margin="0,0,0,8">
                            <ComboBoxItem Content="默认行为" Tag="Default"/>
                            <ComboBoxItem Content="强制上变换注意力 (--force-upcast-attention)" Tag="ForceUpcast"/>
                            <ComboBoxItem Content="禁用上变换注意力 (--dont-upcast-attention)" Tag="DontUpcast"/>
                        </ComboBox>
                    </StackPanel>
                </Expander>

                <!-- 缓存和性能设置 -->
                <Expander Header="缓存和性能设置" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="缓存模式" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding CacheMode}"
                                  SelectedValuePath="Tag"
                                  Margin="0,0,0,8">
                            <ComboBoxItem Content="默认缓存模式" Tag="Default"/>
                            <ComboBoxItem Content="经典缓存 (--cache-classic)" Tag="Classic"/>
                            <ComboBoxItem Content="无缓存 (--cache-none)" Tag="None"/>
                            <ComboBoxItem Content="LRU缓存 (--cache-lru)" Tag="LRU"/>
                        </ComboBox>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="LRU缓存大小（当选择LRU缓存时）" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding CacheLru, UpdateSourceTrigger=PropertyChanged}" 
                                          Minimum="0" 
                                          Maximum="1000"
                                          PlaceholderText="0表示禁用"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"/>
                        </StackPanel>

                        <TextBlock Text="预览设置" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="预览方法" Margin="0,0,0,4"/>
                            <ComboBox SelectedValue="{Binding PreviewMethod}" SelectedValuePath="Content">
                                <ComboBoxItem Content="none"/>
                                <ComboBoxItem Content="auto"/>
                                <ComboBoxItem Content="latent2rgb"/>
                                <ComboBoxItem Content="taesd"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="预览大小" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding PreviewSize, UpdateSourceTrigger=PropertyChanged}" 
                                          Minimum="64" 
                                          Maximum="2048"
                                          PlaceholderText="512"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"/>
                        </StackPanel>

                        <TextBlock Text="性能优化" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <CheckBox Content="确定性算法 (--deterministic)" 
                                  IsChecked="{Binding Deterministic}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="快速FP16累积 (--fast fp16_accumulation)" 
                                  IsChecked="{Binding FastFp16Accumulation}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="快速FP8矩阵乘法 (--fast fp8_matrix_mult)" 
                                  IsChecked="{Binding FastFp8MatrixMult}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="快速CUBLAS操作 (--fast cublas_ops)" 
                                  IsChecked="{Binding FastCublasOps}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="内存映射Torch文件 (--mmap-torch-files)" 
                                  IsChecked="{Binding MmapTorchFiles}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="禁用内存映射 (--disable-mmap)" 
                                  IsChecked="{Binding DisableMmap}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </Expander>

                <!-- 模型配置 -->
                <Expander Header="目录和模型配置" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="基础目录" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding BaseDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="留空使用默认"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseBaseDirectoryCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="模型文件夹路径" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding ModelsPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="./models"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseModelsPathCommand}"/>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="输出文件夹路径" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="./output"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseOutputPathCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="输入文件夹路径" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding InputDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="留空使用默认"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseInputDirectoryCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="临时文件夹路径" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding TempDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="留空使用默认"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseTempDirectoryCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="用户目录路径" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding UserDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="留空使用默认"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseUserDirectoryCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="额外模型路径配置文件" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding ExtraModelPathsConfig, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="extra_model_paths.yaml"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseExtraModelPathsConfigCommand}"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- 网络和安全设置 -->
                <Expander Header="网络和安全设置" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="最大上传大小 (MB)" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding MaxUploadSize, UpdateSourceTrigger=PropertyChanged}" 
                                          Minimum="1" 
                                          Maximum="10240"
                                          PlaceholderText="100"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"/>
                        </StackPanel>

                        <CheckBox Content="启用CORS (--enable-cors-header)" 
                                  IsChecked="{Binding EnableCorsHeader}" 
                                  Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="CORS来源" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding CorsOrigin, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="*"/>
                        </StackPanel>

                        <TextBlock Text="TLS/SSL设置" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="TLS密钥文件" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding TlsKeyFile, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="server.key"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseTlsKeyFileCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="TLS证书文件" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding TlsCertFile, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="server.crt"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseTlsCertFileCommand}"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- 工作流配置 -->
                <Expander Header="工作流和自定义节点配置" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="自定义节点文件夹" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding CustomNodesPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="./custom_nodes"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseCustomNodesPathCommand}"/>
                            </Grid>
                        </StackPanel>
                        
                        <CheckBox Content="启动时自动加载默认工作流" 
                                  IsChecked="{Binding AutoLoadWorkflow}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="启用工作流快照保存" 
                                  IsChecked="{Binding EnableWorkflowSnapshots}"
                                  Margin="0,0,0,8"/>

                        <TextBlock Text="自定义节点管理" FontWeight="SemiBold" Margin="0,12,0,8"/>
                        <CheckBox Content="禁用所有自定义节点 (--disable-all-custom-nodes)" 
                                  IsChecked="{Binding DisableAllCustomNodes}" 
                                  Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="白名单自定义节点" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding WhitelistCustomNodes, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="用空格分隔节点文件夹名称"/>
                        </StackPanel>
                        <CheckBox Content="禁用API节点 (--disable-api-nodes)" 
                                  IsChecked="{Binding DisableApiNodes}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="禁用元数据 (--disable-metadata)" 
                                  IsChecked="{Binding DisableMetadata}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </Expander>

                <!-- 高级设置 -->
                <Expander Header="高级设置" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="日志和调试" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="日志级别" Margin="0,0,0,4"/>
                            <ComboBox SelectedValue="{Binding Verbose}" SelectedValuePath="Content">
                                <ComboBoxItem Content="DEBUG"/>
                                <ComboBoxItem Content="INFO"/>
                                <ComboBoxItem Content="WARNING"/>
                                <ComboBoxItem Content="ERROR"/>
                                <ComboBoxItem Content="CRITICAL"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="哈希函数" Margin="0,0,0,4"/>
                            <ComboBox SelectedValue="{Binding DefaultHashingFunction}" SelectedValuePath="Content">
                                <ComboBoxItem Content="md5"/>
                                <ComboBoxItem Content="sha1"/>
                                <ComboBoxItem Content="sha256"/>
                                <ComboBoxItem Content="sha512"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox Content="输出日志到标准输出 (--log-stdout)" 
                                  IsChecked="{Binding LogStdout}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="不打印服务器输出 (--dont-print-server)" 
                                  IsChecked="{Binding DontPrintServer}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="Windows独立构建 (--windows-standalone-build)" 
                                  IsChecked="{Binding WindowsStandaloneBuild}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="多用户模式 (--multi-user)" 
                                  IsChecked="{Binding MultiUser}" 
                                  Margin="0,0,0,12"/>

                        <TextBlock Text="前端设置" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="前端版本" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding FrontEndVersion, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="comfyanonymous/ComfyUI@latest"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="前端根目录" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding FrontEndRoot, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="留空使用默认"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="浏览" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseFrontEndRootCommand}"/>
                            </Grid>
                        </StackPanel>

                        <CheckBox Content="启用响应体压缩 (--enable-compress-response-body)" 
                                  IsChecked="{Binding EnableCompressResponseBody}" 
                                  Margin="0,0,0,8"/>

                        <StackPanel>
                            <TextBlock Text="额外启动参数" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding ExtraArgs, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="其他未包含的启动参数"
                                        TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- 标签 -->
                <Expander Header="项目标签" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <ui:TextBox Text="{Binding TagsString, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="输入标签，用逗号分隔（例如：AI绘画,图像生成,工作流）"/>
                    </StackPanel>
                </Expander>

                <!-- 操作按钮 -->
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ui:Button Content="保存" 
                                   Icon="{ui:SymbolIcon Save24}"
                                   Appearance="Primary"
                                   Command="{Binding SaveCommand}"
                                   Margin="0,0,8,0"/>
                        <ui:Button Content="取消" 
                                   Icon="{ui:SymbolIcon Dismiss24}"
                                   Command="{Binding CancelCommand}"/>
                    </StackPanel>
                    <ui:Button Grid.Column="2" 
                               Content="删除项目" 
                               Icon="{ui:SymbolIcon Delete24}"
                               Appearance="Danger"
                               Command="{Binding DeleteCommand}"
                               Margin="16,0,0,0"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
