<ui:FluentWindow
    x:Class="ProjectManager.Views.Dialogs.ComfyUIProjectSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManager.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:helpers="clr-namespace:ProjectManager.Helpers"
    xmlns:converters="clr-namespace:ProjectManager.Converters"
    Title="{DynamicResource ComfyUI_SettingsTitle}"
    Width="700"
    Height="800"
    MinWidth="600"
    MinHeight="700"
    d:DataContext="{d:DesignInstance local:ComfyUIProjectSettingsWindow,
                                     IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <ui:FluentWindow.Resources>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:NullableToDoubleConverter x:Key="NullableToDoubleConverter"/>
        <converters:OptionalNumberConverter x:Key="OptionalNumberConverter"/>
        <converters:MemoryManagementModeConverter x:Key="MemoryManagementModeConverter"/>
        <converters:UNetPrecisionModeConverter x:Key="UNetPrecisionModeConverter"/>
        <converters:VAEPrecisionModeConverter x:Key="VAEPrecisionModeConverter"/>
        <converters:AttentionAlgorithmModeConverter x:Key="AttentionAlgorithmModeConverter"/>
        <converters:CacheModeConverter x:Key="CacheModeConverter"/>
    </ui:FluentWindow.Resources>

    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{DynamicResource ComfyUI_SettingsTitle}"
            Grid.Row="0"
            Padding="5,0,0,0">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="DesktopEdit24" Margin="10,-3,10,0"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,32,0,0">
            <StackPanel Margin="24">
                <!-- 项目信息展示 -->
                <ui:Card Margin="0,0,0,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="{Binding ProjectName}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock Text="{DynamicResource ComfyUI_ProjectInfo}" Opacity="0.7" FontSize="12"/>
                        <TextBlock Text="{Binding ProjectPath}" Opacity="0.6" FontSize="11" Margin="0,4,0,0"/>
                    </StackPanel>
                </ui:Card>

                <!-- ComfyUI特定配置 -->
                <Expander Header="{DynamicResource ComfyUI_BasicConfig}" IsExpanded="True" Margin="0,0,0,16">
                    <StackPanel>
                        <!-- ComfyUI 根目录：自动/手动决定 main.py 和 custom_nodes 的基准路径 -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_RootPath}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0"
                                            Text="{Binding ComfyUIRootPath, UpdateSourceTrigger=PropertyChanged}"
                                            PlaceholderText="{DynamicResource ComfyUI_RootPathPlaceholder}"
                                            Margin="0,0,8,0"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <ui:Button Content="{DynamicResource ComfyUI_AutoDetect}"
                                               Margin="0,0,8,0"
                                               Command="{Binding DetectComfyUIRootCommand}"/>
                                    <ui:Button Content="{DynamicResource AddProject_Browse}"
                                               Icon="{ui:SymbolIcon FolderOpen24}"
                                               Command="{Binding BrowseComfyUIRootCommand}"/>
                                </StackPanel>
                            </Grid>
                            <TextBlock Margin="0,4,0,0"
                                       FontSize="10"
                                       Foreground="#666666">
                                <Run Text="{DynamicResource ComfyUI_RootPathDesc}"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_StartCommand}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding StartCommand, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="{DynamicResource ComfyUI_StartCommandPlaceholder}"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_Port}" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding Port, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NullableToDoubleConverter}}" 
                                          Minimum="1" 
                                          Maximum="65535"
                                          PlaceholderText="8188"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_ListenAddress}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding ListenAddress, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="127.0.0.1"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_PythonPath}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding PythonPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="{DynamicResource ComfyUI_PythonPathPlaceholder}"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource AddProject_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowsePythonPathCommand}"/>
                            </Grid>
                            <TextBlock Margin="0,4,0,0"
                                       FontSize="10"
                                       Foreground="#FF5555"
                                       Visibility="{Binding IsPythonPathValid, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                <Run Text="{DynamicResource ComfyUI_PythonPathInvalid}"/>
                            </TextBlock>
                        </StackPanel>


                        <CheckBox Content="{DynamicResource ComfyUI_ListenAll}" 
                                  IsChecked="{Binding ListenAllInterfaces}" 
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Text="{DynamicResource ComfyUI_BrowserLaunchMode}" FontWeight="SemiBold" Margin="0,4,0,8"/>
                        <ComboBox SelectedValue="{Binding BrowserAutoLaunchMode}" 
                                  SelectedValuePath="Tag" 
                                  Margin="0,0,0,8">
                            <ComboBoxItem Content="{DynamicResource ComfyUI_BrowserLaunch_Default}" Tag="Default"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_BrowserLaunch_Auto}" Tag="AutoLaunch"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_BrowserLaunch_Disable}" Tag="DisableAutoLaunch"/>
                        </ComboBox>
                    </StackPanel>
                </Expander>

                <!-- 内存和GPU设置 -->
                <Expander Header="{DynamicResource ComfyUI_MemoryGpuSettings}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource ComfyUI_MemoryMode}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding MemoryManagementMode}"
                                  SelectedValuePath="Tag"
                                  Margin="0,0,0,12">
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Memory_None}" Tag="None"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Memory_GpuOnly}" Tag="GpuOnly"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Memory_HighVram}" Tag="HighVram"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Memory_NormalVram}" Tag="NormalVram"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Memory_LowVram}" Tag="LowVram"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Memory_NoVram}" Tag="NoVram"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Memory_Cpu}" Tag="CpuMode"/>
                        </ComboBox>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_ReserveVram}" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding ReserveVram, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource OptionalNumberConverter}}" 
                                          Minimum="0" 
                                          Maximum="32768"
                                          PlaceholderText="{DynamicResource ComfyUI_Memory_None}"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"
                                          SmallChange="0.5"
                                          LargeChange="1"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_CudaDevice}" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding CudaDevice, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource OptionalNumberConverter}}" 
                                          Minimum="0" 
                                          Maximum="15"
                                          PlaceholderText="{DynamicResource ComfyUI_Memory_None}"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"
                                          SmallChange="1"
                                          LargeChange="1"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_DirectmlDevice}" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding DirectmlDevice, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource OptionalNumberConverter}}" 
                                          Minimum="-1" 
                                          Maximum="15"
                                          PlaceholderText="{DynamicResource ComfyUI_Directml_Auto}"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"
                                          SmallChange="1"
                                          LargeChange="1"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_CudaAllocator}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <ComboBox SelectedValue="{Binding CudaMemoryAllocatorMode}" 
                                      SelectedValuePath="Tag">
                                <ComboBoxItem Content="{DynamicResource ComfyUI_CudaAllocator_Default}" Tag="Default"/>
                                <ComboBoxItem Content="{DynamicResource ComfyUI_CudaAllocator_CudaMalloc}" Tag="CudaMalloc"/>
                                <ComboBoxItem Content="{DynamicResource ComfyUI_CudaAllocator_Disable}" Tag="DisableCudaMalloc"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox Content="{DynamicResource ComfyUI_AsyncOffload}" 
                                  IsChecked="{Binding AsyncOffload}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_ForceNonBlocking}" 
                                  IsChecked="{Binding ForceNonBlocking}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_DisableSmartMemory}" 
                                  IsChecked="{Binding DisableSmartMemory}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </Expander>

                <!-- 精度设置 -->
                <Expander Header="{DynamicResource ComfyUI_PrecisionSettings}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource ComfyUI_GlobalPrecision}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding GlobalPrecisionForceMode}" 
                                  SelectedValuePath="Tag" 
                                  Margin="0,0,0,12">
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Precision_None}" Tag="None"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_ForceFP32}" Tag="ForceFP32"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_ForceFP16}" Tag="ForceFP16"/>
                        </ComboBox>

                        <TextBlock Text="{DynamicResource ComfyUI_UnetPrecision}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding UnetPrecisionMode}"
                                  SelectedValuePath="Tag"
                                  Margin="0,0,0,12">
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Precision_None}" Tag="None"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP32_UNet}" Tag="FP32"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP64_UNet}" Tag="FP64"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_BF16_UNet}" Tag="BF16"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP16_UNet}" Tag="FP16"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP8_E4M3FN_UNet}" Tag="FP8_E4M3FN"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP8_E5M2_UNet}" Tag="FP8_E5M2"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP8_E8M0FNU_UNet}" Tag="FP8_E8M0FNU"/>
                        </ComboBox>

                        <TextBlock Text="{DynamicResource ComfyUI_VaePrecision}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding VaePrecisionMode}"
                                  SelectedValuePath="Tag"
                                  Margin="0,0,0,12">
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Precision_None}" Tag="None"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP16_VAE}" Tag="FP16"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP32_VAE}" Tag="FP32"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_BF16_VAE}" Tag="BF16"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_CPU_VAE}" Tag="CPU"/>
                        </ComboBox>

                        <TextBlock Text="{DynamicResource ComfyUI_TextEncPrecision}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding TextEncoderPrecisionMode}" 
                                  SelectedValuePath="Tag" 
                                  Margin="0,0,0,8">
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Precision_None}" Tag="None"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP8_E4M3FN_TextEnc}" Tag="FP8_E4M3FN"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP8_E5M2_TextEnc}" Tag="FP8_E5M2"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP16_TextEnc}" Tag="FP16"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FP32_TextEnc}" Tag="FP32"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_BF16_TextEnc}" Tag="BF16"/>
                        </ComboBox>

                        <CheckBox Content="{DynamicResource ComfyUI_ForceChannelsLast}" 
                                  IsChecked="{Binding ForceChannelsLast}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </Expander>

                <!-- 注意力机制设置 -->
                <Expander Header="{DynamicResource ComfyUI_AttentionSettings}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource ComfyUI_AttentionAlgo}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding AttentionAlgorithmMode}"
                                  SelectedValuePath="Tag"
                                  Margin="0,0,0,12">
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Precision_None}" Tag="None"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_SplitCrossAttention}" Tag="SplitCrossAttention"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_QuadCrossAttention}" Tag="QuadCrossAttention"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_PytorchCrossAttention}" Tag="PytorchCrossAttention"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_SageAttention}" Tag="SageAttention"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_FlashAttention}" Tag="FlashAttention"/>
                        </ComboBox>

                        <TextBlock Text="{DynamicResource ComfyUI_OtherAttention}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_DisableXformers}" 
                                  IsChecked="{Binding DisableXformers}" 
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Text="{DynamicResource ComfyUI_AttentionUpcast}" FontWeight="SemiBold" Margin="0,4,0,8"/>
                        <ComboBox SelectedValue="{Binding AttentionUpcastMode}" 
                                  SelectedValuePath="Tag" 
                                  Margin="0,0,0,8">
                            <ComboBoxItem Content="{DynamicResource ComfyUI_BrowserLaunch_Default}" Tag="Default"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_ForceUpcast}" Tag="ForceUpcast"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_DontUpcast}" Tag="DontUpcast"/>
                        </ComboBox>
                    </StackPanel>
                </Expander>

                <!-- 缓存和性能设置 -->
                <Expander Header="{DynamicResource ComfyUI_CachePerformance}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource ComfyUI_CacheMode}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox SelectedValue="{Binding CacheMode}"
                                  SelectedValuePath="Tag"
                                  Margin="0,0,0,8">
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Cache_Default}" Tag="Default"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Cache_Classic}" Tag="Classic"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Cache_None}" Tag="None"/>
                            <ComboBoxItem Content="{DynamicResource ComfyUI_Cache_LRU}" Tag="LRU"/>
                        </ComboBox>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_CacheLruSize}" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding CacheLru, UpdateSourceTrigger=PropertyChanged}" 
                                          Minimum="0" 
                                          Maximum="1000"
                                          PlaceholderText="{DynamicResource ComfyUI_CacheLruSizePlaceholder}"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"/>
                        </StackPanel>

                        <TextBlock Text="{DynamicResource ComfyUI_PreviewSettings}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_PreviewMethod}" Margin="0,0,0,4"/>
                            <ComboBox SelectedValue="{Binding PreviewMethod}" SelectedValuePath="Content">
                                <ComboBoxItem Content="none"/>
                                <ComboBoxItem Content="auto"/>
                                <ComboBoxItem Content="latent2rgb"/>
                                <ComboBoxItem Content="taesd"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_PreviewSize}" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding PreviewSize, UpdateSourceTrigger=PropertyChanged}" 
                                          Minimum="64" 
                                          Maximum="2048"
                                          PlaceholderText="512"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"/>
                        </StackPanel>

                        <TextBlock Text="{DynamicResource ComfyUI_PerformanceOpt}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_Deterministic}" 
                                  IsChecked="{Binding Deterministic}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_FastFp16Accum}" 
                                  IsChecked="{Binding FastFp16Accumulation}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_FastFp8Matrix}" 
                                  IsChecked="{Binding FastFp8MatrixMult}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_FastCublas}" 
                                  IsChecked="{Binding FastCublasOps}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_MmapTorch}" 
                                  IsChecked="{Binding MmapTorchFiles}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_DisableMmap}" 
                                  IsChecked="{Binding DisableMmap}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </Expander>

                <!-- 模型配置 -->
                <Expander Header="{DynamicResource ComfyUI_DirModelConfig}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_BaseDir}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding BaseDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="{DynamicResource Generic_DefaultPlaceholder}"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseBaseDirectoryCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_ModelsPath}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding ModelsPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="./models"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseModelsPathCommand}"/>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_OutputPath}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="./output"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseOutputPathCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_InputDir}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding InputDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="{DynamicResource Generic_DefaultPlaceholder}"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseInputDirectoryCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_TempDir}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding TempDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="{DynamicResource Generic_DefaultPlaceholder}"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseTempDirectoryCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_UserDir}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding UserDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="{DynamicResource Generic_DefaultPlaceholder}"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseUserDirectoryCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="{DynamicResource ComfyUI_ExtraModelPaths}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding ExtraModelPathsConfig, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="extra_model_paths.yaml"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseExtraModelPathsConfigCommand}"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- 网络和安全设置 -->
                <Expander Header="{DynamicResource ComfyUI_NetworkSecurity}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_MaxUploadSize}" Margin="0,0,0,4"/>
                            <ui:NumberBox Value="{Binding MaxUploadSize, UpdateSourceTrigger=PropertyChanged}" 
                                          Minimum="1" 
                                          Maximum="10240"
                                          PlaceholderText="100"
                                          ValidationMode="InvalidInputOverwritten"
                                          SpinButtonPlacementMode="Inline"/>
                        </StackPanel>

                        <CheckBox Content="{DynamicResource ComfyUI_EnableCors}" 
                                  IsChecked="{Binding EnableCorsHeader}" 
                                  Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_CorsOrigin}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding CorsOrigin, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="*"/>
                        </StackPanel>

                        <TextBlock Text="{DynamicResource ComfyUI_TlsSslSettings}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_TlsKey}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding TlsKeyFile, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="server.key"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseTlsKeyFileCommand}"/>
                            </Grid>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="{DynamicResource ComfyUI_TlsCert}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding TlsCertFile, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="server.crt"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseTlsCertFileCommand}"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- 工作流配置 -->
                <Expander Header="{DynamicResource ComfyUI_WorkflowConfig}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_CustomNodesDir}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding CustomNodesPath, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="./custom_nodes"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseCustomNodesPathCommand}"/>
                            </Grid>
                        </StackPanel>
                        
                        <CheckBox Content="{DynamicResource ComfyUI_AutoLoadWorkflow}" 
                                  IsChecked="{Binding AutoLoadWorkflow}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_EnableWorkflowSnapshots}" 
                                  IsChecked="{Binding EnableWorkflowSnapshots}"
                                  Margin="0,0,0,8"/>

                        <TextBlock Text="{DynamicResource ComfyUI_CustomNodesMgmt}" FontWeight="SemiBold" Margin="0,12,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_DisableAllCustomNodes}" 
                                  IsChecked="{Binding DisableAllCustomNodes}" 
                                  Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_WhitelistNodes}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding WhitelistCustomNodes, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="{DynamicResource ComfyUI_WhitelistNodesPlaceholder}"/>
                        </StackPanel>
                        <CheckBox Content="{DynamicResource ComfyUI_DisableApiNodes}" 
                                  IsChecked="{Binding DisableApiNodes}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_DisableMetadata}" 
                                  IsChecked="{Binding DisableMetadata}"
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </Expander>

                <!-- 高级设置 -->
                <Expander Header="{DynamicResource ComfyUI_AdvancedSettings}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource ComfyUI_LogDebug}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_LogLevel}" Margin="0,0,0,4"/>
                            <ComboBox SelectedValue="{Binding Verbose}" SelectedValuePath="Content">
                                <ComboBoxItem Content="DEBUG"/>
                                <ComboBoxItem Content="INFO"/>
                                <ComboBoxItem Content="WARNING"/>
                                <ComboBoxItem Content="ERROR"/>
                                <ComboBoxItem Content="CRITICAL"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_HashFunction}" Margin="0,0,0,4"/>
                            <ComboBox SelectedValue="{Binding DefaultHashingFunction}" SelectedValuePath="Content">
                                <ComboBoxItem Content="md5"/>
                                <ComboBoxItem Content="sha1"/>
                                <ComboBoxItem Content="sha256"/>
                                <ComboBoxItem Content="sha512"/>
                            </ComboBox>
                        </StackPanel>

                        <CheckBox Content="{DynamicResource ComfyUI_LogStdout}" 
                                  IsChecked="{Binding LogStdout}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_DontPrintServer}" 
                                  IsChecked="{Binding DontPrintServer}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_WindowsStandalone}" 
                                  IsChecked="{Binding WindowsStandaloneBuild}" 
                                  Margin="0,0,0,8"/>
                        <CheckBox Content="{DynamicResource ComfyUI_MultiUser}" 
                                  IsChecked="{Binding MultiUser}"
                                  Margin="0,0,0,12"/>

                        <TextBlock Text="{DynamicResource ComfyUI_FrontEndSettings}" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_FrontEndVersion}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding FrontEndVersion, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="comfyanonymous/ComfyUI@latest"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="{DynamicResource ComfyUI_FrontEndRoot}" Margin="0,0,0,4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ui:TextBox Grid.Column="0" 
                                            Text="{Binding FrontEndRoot, UpdateSourceTrigger=PropertyChanged}" 
                                            PlaceholderText="{DynamicResource Generic_DefaultPlaceholder}"
                                            Margin="0,0,8,0"/>
                                <ui:Button Grid.Column="1" 
                                           Content="{DynamicResource Generic_Browse}" 
                                           Icon="{ui:SymbolIcon FolderOpen24}"
                                           Command="{Binding BrowseFrontEndRootCommand}"/>
                            </Grid>
                        </StackPanel>

                        <CheckBox Content="{DynamicResource ComfyUI_EnableCompressResponse}" 
                                  IsChecked="{Binding EnableCompressResponseBody}" 
                                  Margin="0,0,0,8"/>

                        <StackPanel>
                            <TextBlock Text="{DynamicResource ComfyUI_ExtraArgs}" Margin="0,0,0,4"/>
                            <ui:TextBox Text="{Binding ExtraArgs, UpdateSourceTrigger=PropertyChanged}" 
                                        PlaceholderText="{DynamicResource ComfyUI_ExtraArgsPlaceholder}"
                                        TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!-- 标签 -->
                <Expander Header="{DynamicResource ComfyUI_ProjectTags}" IsExpanded="False" Margin="0,0,0,16">
                    <StackPanel>
                        <ui:TextBox Text="{Binding TagsString, UpdateSourceTrigger=PropertyChanged}" 
                                    PlaceholderText="{DynamicResource ComfyUI_TagsPlaceholder}"/>
                    </StackPanel>
                </Expander>

                <!-- 操作按钮 -->
                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ui:Button Content="{DynamicResource Generic_Save}" 
                                   Icon="{ui:SymbolIcon Save24}"
                                   Appearance="Primary"
                                   Command="{Binding SaveCommand}"
                                   Margin="0,0,8,0"/>
                        <ui:Button Content="{DynamicResource Generic_Cancel}" 
                                   Icon="{ui:SymbolIcon Dismiss24}"
                                   Command="{Binding CancelCommand}"/>
                    </StackPanel>
                    <ui:Button Grid.Column="2" 
                               Content="{DynamicResource ComfyUI_DeleteProject}" 
                               Appearance="Danger"
                               Command="{Binding DeleteCommand}"
                               Margin="16,0,0,0"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</ui:FluentWindow>
