<UserControl
    x:Class="ProjectManager.Controls.ProjectsHeaderToolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <ui:TextBox
                x:Name="SearchBox"
                PlaceholderText="搜索项目..."
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                MinWidth="280"
                Margin="0,0,16,0">
                <ui:TextBox.Icon>
                    <ui:SymbolIcon Symbol="Search24" />
                </ui:TextBox.Icon>
            </ui:TextBox>

            <ComboBox
                SelectedItem="{Binding SelectedStatusFilter}"
                ItemsSource="{Binding StatusFilters}"
                MinWidth="70" />
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <ui:Button
                Content="新建项目"
                Icon="{ui:SymbolIcon Add24}"
                Appearance="Primary"
                Command="{Binding CreateProjectCommand}"
                Margin="0,0,4,0" />
            <ui:Button
                Content="Git克隆"
                Icon="{ui:SymbolIcon Branch24}"
                Command="{Binding CloneFromGitCommand}"
                Margin="4,0,4,0" />
            <ui:Button
                Content="刷新"
                Icon="{ui:SymbolIcon ArrowSync24}"
                Command="{Binding RefreshCommand}"
                Margin="4,0,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
