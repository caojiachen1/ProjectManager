<UserControl
    x:Class="ProjectManager.Controls.PerformanceHeaderToolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="150"
    d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>

    <StackPanel>
        <UniformGrid Columns="4" Margin="0,0,0,12">
            <ui:Card Padding="16" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Performance_RunningProjects}" FontSize="12" Opacity="0.7" />
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding RunningProjects}" FontSize="26" FontWeight="SemiBold" />
                        <TextBlock Text="{Binding TotalProjects, StringFormat='/{0}'}" FontSize="14" Opacity="0.6" Margin="6,0,0,0" />
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <ui:Card Padding="16" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Performance_TotalCpuUsage}" FontSize="12" Opacity="0.7" />
                    <TextBlock FontSize="26" FontWeight="SemiBold">
                        <Run Text="{Binding TotalCpuUsage, StringFormat={}{0:F1}}" />
                        <Run Text="%" />
                    </TextBlock>
                </StackPanel>
            </ui:Card>

            <ui:Card Padding="16" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Performance_TotalMemoryUsage}" FontSize="12" Opacity="0.7" />
                    <TextBlock FontSize="26" FontWeight="SemiBold">
                        <Run Text="{Binding TotalMemoryUsageMb, TargetNullValue=0, StringFormat={}{0:F1}}" />
                        <Run Text=" MB" />
                    </TextBlock>
                </StackPanel>
            </ui:Card>

            <ui:Card Padding="16">
                <StackPanel>
                    <TextBlock Text="{DynamicResource Performance_LastUpdate}" FontSize="12" Opacity="0.7" />
                    <TextBlock Text="{Binding LastUpdated, StringFormat={}{0:HH:mm:ss}}" FontSize="26" FontWeight="SemiBold" />
                </StackPanel>
            </ui:Card>
        </UniformGrid>

        <DockPanel LastChildFill="False">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" DockPanel.Dock="Left">
                <ui:SymbolIcon Symbol="Pulse24" FontSize="18" />
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" FontSize="14" Margin="8,0,0,0" />
                <ProgressBar Width="80" Height="4" Margin="12,8,0,0" IsIndeterminate="True"
                             Visibility="{Binding IsMonitoringActive, Converter={StaticResource BoolToVisibility}}" />
            </StackPanel>

            <ui:Button Content="{DynamicResource Performance_Refresh}" Icon="{ui:SymbolIcon ArrowClockwise24}" Command="{Binding RefreshNowCommand}"
                      DockPanel.Dock="Right" />
        </DockPanel>
    </StackPanel>
</UserControl>
