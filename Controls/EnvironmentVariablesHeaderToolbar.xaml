<UserControl
    x:Class="ProjectManager.Controls.EnvironmentVariablesHeaderToolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- 搜索和筛选区域 -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
            <ui:TextBox
                x:Name="SearchBox"
                PlaceholderText="搜索环境变量..."
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                MinWidth="280"
                Margin="0,0,16,0">
                <ui:TextBox.Icon>
                    <ui:SymbolIcon Symbol="Search24" />
                </ui:TextBox.Icon>
            </ui:TextBox>

            <!-- 变量类型筛选 -->
            <ComboBox
                x:Name="FilterComboBox"
                SelectedIndex="{Binding SelectedFilterIndex}"
                MinWidth="100"
                Margin="0,0,16,0">
                <ComboBoxItem Content="全部变量"/>
                <ComboBoxItem Content="用户变量"/>
                <ComboBoxItem Content="系统变量"/>
            </ComboBox>

            <!-- 统计信息 -->
            <ui:Card Padding="8,4" Margin="0,0,16,0" Background="Transparent">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="People24" FontSize="16" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding UserVariablesCount, StringFormat='用户: {0}'}" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </ui:Card>

            <ui:Card Padding="8,4" Background="Transparent">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="Shield24" FontSize="16" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding SystemVariablesCount, StringFormat='系统: {0}'}" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </ui:Card>
        </StackPanel>

        <!-- 操作按钮区域 -->
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <!-- 新建用户变量 -->
            <ui:Button 
                Content="添加用户变量" 
                Icon="{ui:SymbolIcon People24}"
                Appearance="Primary"
                Command="{Binding AddUserVariableCommand}"
                Margin="0,0,4,0"
                Padding="12,6"
                ToolTip="添加新的用户环境变量"/>

            <!-- 新建系统变量 -->
            <ui:Button 
                Content="添加系统变量" 
                Icon="{ui:SymbolIcon Shield24}"
                Appearance="Primary"
                Command="{Binding AddSystemVariableCommand}"
                Margin="0,0,8,0"
                Padding="12,6"
                ToolTip="添加新的系统环境变量（需要管理员权限）"/>

            <!-- 编辑按钮 -->
            <ui:Button 
                Content="编辑选中项" 
                Icon="{ui:SymbolIcon Edit24}"
                Appearance="Secondary"
                Command="{Binding EditSelectedCommand}"
                IsEnabled="{Binding HasSelection}"
                Margin="0,0,4,0"
                Padding="12,6"
                ToolTip="编辑当前选中的环境变量"/>

            <!-- 删除按钮 -->
            <ui:Button 
                Content="删除选中项" 
                Icon="{ui:SymbolIcon Delete24}"
                Appearance="Danger"
                Command="{Binding DeleteSelectedCommand}"
                IsEnabled="{Binding HasSelection}"
                Margin="4,0,8,0"
                Padding="12,6"
                ToolTip="删除当前选中的环境变量"/>

            <!-- 刷新按钮 -->
            <ui:Button 
                Content="刷新列表" 
                Icon="{ui:SymbolIcon ArrowClockwise24}"
                Appearance="Secondary"
                Command="{Binding RefreshCommand}"
                Padding="12,6"
                ToolTip="重新加载环境变量列表"/>
        </StackPanel>
    </Grid>
</UserControl>