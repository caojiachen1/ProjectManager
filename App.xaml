<Application
    x:Class="ProjectManager.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:ProjectManager.Helpers"
    xmlns:converters="clr-namespace:ProjectManager.Converters"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 转换器 -->
            <local:StatusToBadgeConverter x:Key="StatusToBadgeConverter"/>
            <local:StatusToStartEnabledConverter x:Key="StatusToStartEnabledConverter"/>
            <local:StatusToStopEnabledConverter x:Key="StatusToStopEnabledConverter"/>
            <local:StatusToToggleButtonTextConverter x:Key="StatusToToggleButtonTextConverter"/>
            <local:StatusToToggleButtonIconConverter x:Key="StatusToToggleButtonIconConverter"/>
            <local:StatusToToggleButtonEnabledConverter x:Key="StatusToToggleButtonEnabledConverter"/>
            <local:StatusToToggleButtonAppearanceConverter x:Key="StatusToToggleButtonAppearanceConverter"/>
            <local:FrameworkToVisibilityConverter x:Key="FrameworkToVisibilityConverter"/>
            <local:ComfyUIFrameworkToVisibilityConverter x:Key="ComfyUIFrameworkToVisibilityConverter"/>
            <local:ProjectCommandParameterConverter x:Key="ProjectCommandParameterConverter"/>
            <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <local:FrameworkToDescriptionConverter x:Key="FrameworkToDescriptionConverter"/>
            <local:FrameworkToLocalizedNameConverter x:Key="FrameworkToLocalizedNameConverter"/>
            <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <local:BooleanToInverseBooleanConverter x:Key="BooleanToInverseBooleanConverter"/>
            <converters:GitStatusToBadgeConverter x:Key="GitStatusToBadgeConverter"/>
            <converters:HasGitRepositoryToVisibilityConverter x:Key="HasGitRepositoryToVisibilityConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:CellsPanelOffsetConverter x:Key="CellsPanelOffsetConverter"/>
            
            <!-- 自定义深灰色刷子用于DataGrid选中状态 -->
            <SolidColorBrush x:Key="DataGridSelectedBackgroundBrush" Color="#252525" />
            <SolidColorBrush x:Key="DataGridSelectedForegroundBrush" Color="#FFFFFF" />
            
            <!-- Clean DataGrid style without the problematic CellsPanelHorizontalOffset binding -->
            <Style x:Key="CleanDataGridStyle" TargetType="DataGrid">
                <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="GridLinesVisibility" Value="None"/>
                <Setter Property="CanUserAddRows" Value="False"/>
                <Setter Property="CanUserDeleteRows" Value="False"/>
                <Setter Property="CanUserReorderColumns" Value="False"/>
                <Setter Property="CanUserResizeColumns" Value="True"/>
                <Setter Property="CanUserSortColumns" Value="False"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="RowHeaderWidth" Value="0"/>
                <Setter Property="RowStyle">
                    <Setter.Value>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource DataGridSelectedBackgroundBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource DataGridSelectedForegroundBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>
                <Setter Property="CellStyle">
                    <Setter.Value>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource DataGridSelectedForegroundBrush}"/>
                                </Trigger>
                                <Trigger Property="IsEditing" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource DataGridSelectedForegroundBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>
                <Setter Property="ColumnHeaderStyle">
                    <Setter.Value>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorSecondaryBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <Setter Property="Padding" Value="8,6"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </Setter.Value>
                </Setter>
                <!-- Override the template to remove the problematic Select All button -->
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGrid">
                            <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    Background="{TemplateBinding Background}" 
                                    Padding="{TemplateBinding Padding}" 
                                    SnapsToDevicePixels="True">
                                <ScrollViewer x:Name="DG_ScrollViewer" Focusable="False">
                                    <ScrollViewer.Template>
                                        <ControlTemplate TargetType="ScrollViewer">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                
                                                <!-- Removed the problematic Select All button -->
                                                <DataGridColumnHeadersPresenter Grid.Column="0" x:Name="PART_ColumnHeadersPresenter" 
                                                                               Visibility="{Binding Path=HeadersVisibility, ConverterParameter={x:Static DataGridHeadersVisibility.Column}, Converter={x:Static DataGrid.HeadersVisibilityConverter}, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                                                
                                                <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" Grid.Row="1" Grid.Column="0" CanContentScroll="{TemplateBinding CanContentScroll}"/>
                                                
                                                <ScrollBar Grid.Row="1" Grid.Column="1" Name="PART_VerticalScrollBar" 
                                                          Orientation="Vertical" Maximum="{TemplateBinding ScrollableHeight}" 
                                                          ViewportSize="{TemplateBinding ViewportHeight}" 
                                                          Value="{Binding Path=VerticalOffset, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}" 
                                                          Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                                                
                                                <ScrollBar Grid.Row="2" Grid.Column="0" Name="PART_HorizontalScrollBar" 
                                                          Orientation="Horizontal" Maximum="{TemplateBinding ScrollableWidth}" 
                                                          ViewportSize="{TemplateBinding ViewportWidth}" 
                                                          Value="{Binding Path=HorizontalOffset, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}" 
                                                          Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </ScrollViewer.Template>
                                    <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                </ScrollViewer>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
